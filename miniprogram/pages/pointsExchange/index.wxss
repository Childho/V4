/* 积分兑换页面样式 */
.points-exchange-container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 40rpx;
}

/* 头部积分信息 */
.points-header {
  background-color: #4169e1;
  padding: 60rpx 30rpx;
  box-sizing: border-box;
}

.points-card {
  background-color: rgba(255, 255, 255, 0.1);
  padding: 30rpx;
  border-radius: 16rpx;
  text-align: center;
  color: #ffffff;
}

.points-title {
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.points-value {
  font-size: 60rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.points-tips {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 兑换商品列表 */
.exchange-list {
  margin: -40rpx 30rpx 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333333;
}

.product-item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.product-item:last-child {
  border-bottom: none;
}

.product-info {
  display: flex;
  flex: 1;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background-color: #f5f7fa;
  margin-right: 20rpx;
}

.product-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 10rpx;
}

.product-desc {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.product-stock {
  font-size: 24rpx;
  color: #666666;
}

.exchange-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
  margin-left: 20rpx;
}

.product-points {
  font-size: 28rpx;
  color: #ff6b00;
  font-weight: bold;
}

.exchange-btn {
  background-color: #4169e1;
  color: #ffffff;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.exchange-btn.disabled {
  background-color: #cccccc;
  color: #ffffff;
}

.no-more, .empty {
  text-align: center;
  padding: 30rpx 0;
  color: #999999;
  font-size: 26rpx;
}

/* 积分规则 */
.points-rules {
  margin: 0 30rpx 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.rules-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333333;
}

.rules-content {
  color: #666666;
}

.rule-item {
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

/* 加载样式 */
.loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.7);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4169e1;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 
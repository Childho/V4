/* 商城页面样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFangSC', 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.mall-container {
  padding-bottom: 120rpx;
}

/* 顶部标题 */
.mall-header {
  padding: 30rpx 30rpx 10rpx;
  background-color: white;
  text-align: center;
}

.mall-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.mall-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: white;
}

.search-input {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.search-input input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
}

.filter-icon,
.cart-icon {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  position: relative;
}

.filter-icon image,
.cart-icon image {
  width: 44rpx;
  height: 44rpx;
}

.badge {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #ff4d4f;
  color: white;
  font-size: 20rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 品牌筛选 */
.brand-filter {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 20rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.brand-filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.brand-filter-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.btn-all {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999;
  cursor: pointer;
  transition: color 0.3s ease;
}

.btn-all:active {
  color: #4169e1;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
  transition: transform 0.3s ease;
}

.arrow-icon.expanded {
  transform: rotate(180deg);
}

.brand-list-container {
  overflow: hidden;
}

.brand-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.brand-list.default-brands {
  animation: fadeIn 0.3s ease-in-out;
}

.brand-list.all-brands {
  animation: slideDown 0.3s ease-in-out;
}

.brand-item {
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.brand-item.active {
  color: white;
  background-color: #4169e1;
  transform: scale(1.05);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideDown {
  from {
    opacity: 0;
    max-height: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    max-height: 500rpx;
    transform: translateY(0);
  }
}

/* 商品分类 */
.category-section {
  background-color: white;
  padding: 30rpx;
  margin-top: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.category-name {
  font-size: 26rpx;
  color: #333;
}

/* 产品部分 */
.product-section {
  background-color: white;
  padding: 30rpx;
  margin-top: 48rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  height: 88rpx;
  padding: 0 32rpx 0 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  line-height: 44rpx;
  font-family: 'PingFangSC-Medium';
}

.view-all {
  font-size: 28rpx;
  color: #999999;
  display: flex;
  align-items: center;
  line-height: 40rpx;
  font-family: 'PingFangSC-Regular';
}

.arrow {
  margin-left: 8rpx;
  width: 24rpx;
  height: 24rpx;
}

.product-list {
  white-space: nowrap;
  padding: 0 32rpx;
  position: relative;
  margin-left: -32rpx;
  width: calc(100% + 64rpx);
}

.product-list::before,
.product-list::after {
  content: "";
  position: absolute;
  top: 0;
  height: 100%;
  width: 32rpx;
  z-index: 1;
  pointer-events: none;
}

.product-list::before {
  left: 0;
  background: linear-gradient(to right, rgba(245,245,245,0), rgba(0,0,0,0.1));
}

.product-list::after {
  right: 0;
  background: linear-gradient(to left, rgba(245,245,245,0), rgba(0,0,0,0.1));
}

.product-card {
  display: inline-block;
  width: 240rpx;
  margin-right: 24rpx;
  vertical-align: top;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  padding: 24rpx 16rpx;
  overflow: hidden;
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  background-color: #EFEFEF;
  display: block;
  margin: 0 auto;
  object-fit: cover;
}

.product-info {
  padding: 16rpx 0;
  margin-top: 8rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333333;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 80rpx;
  line-height: 40rpx;
  font-family: 'PingFangSC-Regular';
}

.product-price {
  font-size: 32rpx;
  color: #FF4A4A;
  font-weight: 500;
  margin-top: 8rpx;
  font-family: 'PingFangSC-Medium';
}

.product-sold {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
  font-family: 'PingFangSC-Regular';
}

/* 浮动购物车按钮 */
.floating-cart-btn {
  position: fixed;
  right: 32rpx;
  bottom: calc(34pt + env(safe-area-inset-bottom));
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
  background-color: #387EF5;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.2);
  z-index: 100;
}

.floating-cart-btn image {
  width: 48rpx;
  height: 48rpx;
}

.cart-badge {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #FF4A4A;
  color: white;
  font-size: 24rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  padding: 0 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
} 
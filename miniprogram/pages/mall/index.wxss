/* 商城页面样式 */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.mall-container {
  padding-bottom: 100rpx;
}

/* 顶部标题 */
.mall-header {
  padding: 30rpx 30rpx 10rpx;
  background-color: white;
  text-align: center;
}

.mall-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.mall-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: white;
}

.search-input {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.search-input input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
}

.filter-icon,
.cart-icon {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  position: relative;
}

.filter-icon image,
.cart-icon image {
  width: 44rpx;
  height: 44rpx;
}

.badge {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #ff4d4f;
  color: white;
  font-size: 20rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 品牌筛选 */
.brand-filter {
  background-color: white;
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
}

.brand-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.brand-list-container {
  width: 100%;
  overflow: hidden;
}

.brand-list {
  white-space: nowrap;
  display: flex;
}

.brand-item {
  display: inline-block;
  padding: 14rpx 30rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 30rpx;
}

.brand-item.active {
  color: white;
  background-color: #4169e1;
}

/* 商品分类 */
.category-section {
  background-color: white;
  padding: 30rpx;
  margin-top: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.category-name {
  font-size: 26rpx;
  color: #333;
}

/* 产品部分 */
.product-section {
  background-color: white;
  padding: 30rpx;
  margin-top: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.view-all {
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.arrow {
  margin-left: 6rpx;
}

.product-list {
  white-space: nowrap;
}

.product-card {
  display: inline-block;
  width: 240rpx;
  margin-right: 20rpx;
  vertical-align: top;
}

.product-image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
}

.product-info {
  padding: 16rpx 0;
}

.product-name {
  font-size: 26rpx;
  color: #333;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 72rpx;
}

.product-price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: 500;
  margin-top: 10rpx;
}

.product-sold {
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
} 
/* 商城页面主容器样式 */
.mall-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为底部导航栏和悬浮按钮留出空间 */
  /* 移除多余的顶部间距，自定义导航栏会处理安全区域 */
  box-sizing: border-box;
}

/* 自定义顶部导航栏样式 */
.custom-nav-bar {
  background-color: #ffffff;
  /* 使用安全区域适配，确保在状态栏下方正确显示 */
  padding: calc(env(safe-area-inset-top) + 20rpx) 0 18rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.nav-title {
  text-align: center; /* 标题居中 */
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  padding: 24rpx 0 14rpx 0; /* 增加顶部内边距，让标题下移一点 */
  line-height: 1.2;
}

.nav-actions {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  /* 预留右侧功能按钮区域 */
}

/* 固定搜索栏样式 */
.fixed-search-section {
  background-color: #ffffff;
  padding: 16rpx 24rpx; /* 搜索栏内边距 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.content-scroll {
  height: calc(100vh - env(safe-area-inset-top) - 140rpx); /* 动态计算高度 */
  box-sizing: border-box;
}

/* 1. 顶部搜索栏样式 */
.search-section {
  background-color: #ffffff;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 24rpx;
  padding: 16rpx 20rpx;
  border: 2rpx solid #e5e5e5;
}

.search-input-wrapper:focus-within {
  border-color: #4169e1; /* 聚焦时的边框颜色 */
  background-color: #ffffff;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  background-color: transparent;
}

.search-input::placeholder {
  color: #999999;
}

.search-btn {
  background-color: #4169e1;
  color: #ffffff;
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  min-width: 120rpx;
}

.search-btn:active {
  background-color: #3654c4;
}

/* 2. 限时秒杀模块样式 */
.seckill-section {
  background-color: #ffffff;
  margin-top: 20rpx;
  padding: 32rpx 24rpx;
}

.seckill-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.seckill-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.seckill-icon {
  width: 32rpx;
  height: 32rpx;
}

.seckill-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff4444;
}

.seckill-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.seckill-countdown {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.countdown-text {
  font-size: 24rpx;
  color: #666666;
}

.countdown-time {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.time-unit {
  background-color: #333333;
  color: #ffffff;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  font-weight: 600;
  min-width: 40rpx;
  text-align: center;
}

.time-colon {
  color: #333333;
  font-weight: 600;
  font-size: 24rpx;
}

.seckill-more {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  background: #f0f4ff;
  border-radius: 20rpx;
  border: 1rpx solid #4169e1;
  transition: all 0.3s ease;
}

.seckill-more:active {
  background: #e6edff;
  transform: scale(0.95);
}

.seckill-more .more-text {
  font-size: 22rpx;
  color: #4169e1;
  font-weight: 500;
}

.seckill-more .more-icon {
  width: 20rpx;
  height: 20rpx;
  filter: hue-rotate(210deg);
}

/* 秒杀商品横向滑动列表 */
.seckill-products {
  white-space: nowrap;
  padding: 0 0 20rpx 0;
}

.seckill-product-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 24rpx;
  vertical-align: top;
}

.seckill-product-item:last-child {
  margin-right: 0;
}

.product-image-wrapper {
  position: relative;
  margin-bottom: 16rpx;
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
}

.seckill-badge {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  background-color: #ff4444;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

/* 新增：商城首页秒杀商品的小尺寸抢字角标 */
.grab-corner-badge-small {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  width: 44rpx;
  height: 44rpx;
  background: linear-gradient(135deg, #FF1744 0%, #E91E63 50%, #FF1744 100%);
  color: #ffffff;
  font-size: 22rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(255, 23, 68, 0.5),
              0 0 0 2rpx rgba(255, 255, 255, 0.9);
  z-index: 10;
  letter-spacing: 0;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.3);
  transform: rotate(-8deg);
  animation: bounce-small 2.5s ease-in-out infinite;
}

/* 小尺寸抢字角标的跳动动画效果 */
@keyframes bounce-small {
  0%, 60%, 100% {
    transform: rotate(-8deg) scale(1);
  }
  30% {
    transform: rotate(-8deg) scale(1.08);
  }
  80% {
    transform: rotate(-8deg) scale(0.96);
  }
}

.product-info {
  text-align: left;
}

.product-title {
  font-size: 24rpx;
  color: #333333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.price-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.current-price {
  font-size: 28rpx;
  color: #ff4444;
  font-weight: 600;
}

.original-price {
  font-size: 24rpx;
  color: #999999;
  text-decoration: line-through;
}

/* 3. 轮播Banner区域样式 */
.banner-section {
  margin-top: 20rpx;
  padding: 0 24rpx;
}

.banner-swiper {
  height: 320rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #f0f0f0;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 4. 商品分组区域样式 */
.product-groups {
  margin-top: 20rpx;
}

.product-group {
  background-color: #ffffff;
  margin-bottom: 20rpx;
  padding: 32rpx 24rpx;
}

.group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.group-title {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.title-desc {
  font-size: 24rpx;
  color: #666666;
}

.more-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.more-text {
  font-size: 24rpx;
  color: #4169e1;
}

.more-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 两列商品卡片布局 */
.product-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.product-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
}

.product-card:active {
  transform: scale(0.98);
}

.card-image-wrapper {
  position: relative;
  margin-bottom: 16rpx;
}

.card-image {
  width: 100%;
  height: 260rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
}

.product-tag {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  background-color: #ff6b35;
  color: #ffffff;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.product-name {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.product-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 28rpx;
  color: #ff4444;
  font-weight: 600;
}

.product-sales {
  font-size: 22rpx;
  color: #999999;
}

/* 5. 页面底部占位 */
.bottom-placeholder {
  height: 40rpx;
}

/* 6. 右下角悬浮购物车按钮样式 */
.floating-cart {
  position: fixed;
  right: 40rpx;
  bottom: 160rpx; /* 距离底部导航栏的距离 */
  width: 100rpx;
  height: 100rpx;
  background-color: #4169e1;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(65, 105, 225, 0.4);
  z-index: 1000;
  transition: transform 0.2s ease;
}

.floating-cart:active {
  transform: scale(0.9);
}

.cart-icon {
  width: 48rpx;
  height: 48rpx;
}

.cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 36rpx;
  height: 36rpx;
  background-color: #ff4444;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid #ffffff;
}

.badge-text {
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 600;
  line-height: 1;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .product-grid {
    gap: 16rpx;
  }
  
  .product-card {
    padding: 16rpx;
  }
  
  .card-image {
    height: 220rpx;
  }
}

/* 7. 活动模块样式 */
.activity-section {
  background-color: #ffffff;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.activity-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.activity-icon {
  width: 32rpx;
  height: 32rpx;
}

.activity-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.activity-more {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.more-text {
  font-size: 26rpx;
  color: #666666;
}

.more-icon {
  width: 24rpx;
  height: 24rpx;
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-card {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  overflow: hidden;
  transition: transform 0.2s ease;
}

.activity-card:active {
  transform: scale(0.98);
}

.activity-image-wrapper {
  position: relative;
  height: 200rpx;
}

.activity-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.activity-status {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background-color: #ff4444;
  color: #ffffff;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.activity-status.coming {
  background-color: #ffa500;
}

.activity-info {
  padding: 20rpx;
}

.activity-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.activity-desc {
  font-size: 24rpx;
  color: #666666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.activity-time {
  font-size: 22rpx;
  color: #999999;
}

.activity-location {
  font-size: 22rpx;
  color: #999999;
} 
/* 地址管理页面样式 */

.container {
  background-color: #f7f7f7;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为底部操作栏留出空间 */
}

/* 页面头部样式 */
.header {
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e8e8e8;
  position: sticky;
  top: 0;
  z-index: 100;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-buttons {
  display: flex;
  gap: 20rpx;
}

.manage-btn {
  background-color: #f8f8f8;
  color: #666;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  border: none;
}

.add-btn {
  background-color: #007aff;
  color: white;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  border: none;
}

/* 地址列表样式 */
.address-list {
  margin-top: 20rpx;
}

.address-item {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  border-radius: 16rpx;
  margin: 0 30rpx 20rpx;
}

/* 默认地址样式 */
.address-item.default {
  border: 2rpx solid #007aff;
}

/* 多选框样式 */
.checkbox-wrapper {
  margin-right: 20rpx;
}

/* 地址内容区域 */
.address-content {
  flex: 1;
  margin-right: 20rpx;
}

/* 联系人信息 */
.contact-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.consignee {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.mobile {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.default-tag {
  background-color: #007aff;
  color: white;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
}

/* 地址信息 */
.address-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.region {
  font-size: 28rpx;
  color: #666;
}

.detail {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

/* 操作按钮样式 */
.actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.edit-btn {
  background-color: #f0f8ff;
  color: #007aff;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid #007aff;
  min-width: 80rpx;
}

.delete-btn {
  background-color: #fff5f5;
  color: #ff4757;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid #ff4757;
  min-width: 80rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.add-first-btn {
  background-color: #007aff;
  color: white;
  font-size: 32rpx;
  padding: 24rpx 60rpx;
  border-radius: 50rpx;
  border: none;
}

/* 底部操作栏样式（管理模式） */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #e8e8e8;
  z-index: 200;
}

.select-all {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.select-all text {
  font-size: 28rpx;
  color: #333;
}

.batch-delete-btn {
  background-color: #f0f0f0;
  color: #999;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  border: none;
  transition: all 0.3s ease;
}

.batch-delete-btn.active {
  background-color: #ff4757;
  color: white;
}

/* 响应式设计：适配不同屏幕尺寸 */
@media screen and (max-width: 320px) {
  .header {
    padding: 20rpx;
  }
  
  .title {
    font-size: 32rpx;
  }
  
  .address-item {
    padding: 20rpx;
    margin: 0 20rpx 16rpx;
  }
  
  .consignee {
    font-size: 30rpx;
  }
} 
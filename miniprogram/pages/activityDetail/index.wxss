.activity-detail-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 120rpx;
}

.activity-cover {
  width: 100%;
  height: 450rpx;
  margin-top: 88rpx;
}

.activity-info {
  padding: 32rpx;
  background: #fff;
}

.activity-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.activity-time,
.activity-location,
.activity-organizer {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #666;
}

.icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.detail-section {
  margin-top: 24rpx;
  padding: 32rpx;
  background: #fff;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  width: 8rpx;
  height: 32rpx;
  background: #3e7fff;
  border-radius: 4rpx;
}

.activity-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

.activity-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.activity-rules {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #f5f5f5;
}

.rules-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.rules-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.participants-section {
  margin-top: 24rpx;
  padding: 32rpx;
  background: #fff;
}

.participants-list {
  display: flex;
  flex-wrap: wrap;
}

.participant {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  margin-bottom: 24rpx;
}

.participant-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-bottom: 12rpx;
}

.participant-name {
  font-size: 24rpx;
  color: #666;
  width: 100%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background: #fff;
  border-top: 1rpx solid #f1f1f1;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.share-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 32rpx;
}

.share-btn image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.share-btn text {
  font-size: 24rpx;
  color: #666;
}

.join-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #3e7fff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  text-align: center;
}

.join-btn.joined {
  background: #ccc;
} 
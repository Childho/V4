.activity-detail-container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: env(safe-area-inset-bottom);
}

.activity-cover {
  width: 100%;
  height: 400rpx;
  background-color: #f0f0f0;
}

.activity-info {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.activity-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.info-item {
  margin-bottom: 16rpx;
  display: flex;
  align-items: flex-start;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
  min-width: 140rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}

.detail-section {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.activity-description {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.activity-content {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.activity-rules {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.rules-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.rules-content {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  white-space: pre-line;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.share-btn {
  padding: 20rpx 30rpx;
  background-color: #f8f8f8;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  min-width: 160rpx;
}

.join-btn {
  flex: 1;
  background-color: #4169e1;
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 0;
  font-size: 30rpx;
  font-weight: 500;
}

.join-btn.joined {
  background-color: #f0f0f0;
  color: #999999;
}

.join-btn::after {
  border: none;
}

.safe-area-bottom {
  height: calc(120rpx + env(safe-area-inset-bottom));
} 
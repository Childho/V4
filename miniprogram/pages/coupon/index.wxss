/* 优惠券页面整体样式 */
.coupon-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部tab切换样式 */
.tab-container {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.tab-wrapper {
  display: flex;
  padding: 0 32rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #ff6b35;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #ff6b35;
  border-radius: 2rpx;
}

/* 优惠券列表样式 */
.coupon-list {
  padding: 20rpx 32rpx;
}

/* 优惠券卡片样式 */
.coupon-item {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
}

.coupon-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.12);
}

/* 已使用和已过期样式 */
.coupon-item.used,
.coupon-item.expired {
  opacity: 0.6;
  filter: grayscale(0.5);
}

.coupon-item.used::after,
.coupon-item.expired::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.1);
  z-index: 10;
}

/* 左侧金额区域样式 */
.coupon-left {
  width: 200rpx;
  background: linear-gradient(135deg, #ff6b35 0%, #ff8f5a 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.coupon-left::after {
  content: '';
  position: absolute;
  right: -10rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 20rpx;
  height: 20rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  box-shadow: 0 -30rpx 0 #f5f5f5, 0 30rpx 0 #f5f5f5;
}

.amount-wrapper {
  text-align: center;
  color: #fff;
}

/* 满减券金额样式 */
.amount-section {
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.currency {
  font-size: 24rpx;
  font-weight: 500;
}

.amount {
  font-size: 48rpx;
  font-weight: 700;
  margin-left: 4rpx;
}

/* 折扣券样式 */
.discount-section {
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.discount {
  font-size: 48rpx;
  font-weight: 700;
}

.discount-text {
  font-size: 24rpx;
  font-weight: 500;
  margin-left: 4rpx;
}

/* 免邮券样式 */
.free-shipping .free-text {
  font-size: 32rpx;
  font-weight: 700;
}

/* 使用条件样式 */
.condition {
  font-size: 20rpx;
  margin-top: 8rpx;
  opacity: 0.9;
}

/* 右侧信息区域样式 */
.coupon-right {
  flex: 1;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 优惠券标题 */
.coupon-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

/* 适用范围 */
.coupon-scope {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

/* 有效期 */
.coupon-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

/* 使用时间 */
.use-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

/* 优惠券描述 */
.coupon-desc {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

/* 操作按钮区域 */
.coupon-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

/* 使用按钮 */
.use-btn {
  background: linear-gradient(135deg, #ff6b35 0%, #ff8f5a 100%);
  color: #fff;
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.3);
  transition: all 0.3s ease;
}

.use-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 53, 0.4);
}

/* 选择按钮 */
.select-btn {
  background: linear-gradient(135deg, #4169e1 0%, #6690ff 100%);
  color: #fff;
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(65, 105, 225, 0.3);
  transition: all 0.3s ease;
}

.select-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(65, 105, 225, 0.4);
}

/* 状态标签 */
.status-tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.used-tag {
  background-color: #f0f0f0;
  color: #999;
}

.expired-tag {
  background-color: #ffebee;
  color: #f44336;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.3;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态样式 */
.loading-state {
  text-align: center;
  padding: 60rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 没有更多数据提示 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #ccc;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.modal-content {
  background-color: #fff;
  border-radius: 24rpx;
  width: 100%;
  max-width: 600rpx;
  overflow: hidden;
  animation: modalShow 0.3s ease;
}

@keyframes modalShow {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 0 8rpx;
}

/* 弹窗内容 */
.modal-body {
  padding: 32rpx;
}

.coupon-preview {
  background: linear-gradient(135deg, #ff6b35 0%, #ff8f5a 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  text-align: center;
  color: #fff;
  margin-bottom: 32rpx;
}

.preview-amount {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.preview-title {
  font-size: 28rpx;
  opacity: 0.9;
}

.confirm-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  text-align: center;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  border-top: 1px solid #f0f0f0;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  font-size: 32rpx;
}

.cancel-btn {
  color: #999;
  border-right: 1px solid #f0f0f0;
}

.confirm-btn {
  color: #ff6b35;
  font-weight: 600;
} 
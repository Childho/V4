/* 地址新增/编辑页面样式 */

.container {
  background-color: #f7f7f7;
  min-height: 100vh;
  padding: 20rpx 30rpx;
}

/* 表单容器 */
.address-form {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 40rpx;
}

/* 表单项通用样式 */
.form-item {
  margin-bottom: 40rpx;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

/* 标签样式 */
.label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

/* 必填字段标记 */
.label.required::before {
  content: '*';
  color: #ff4757;
  margin-right: 8rpx;
}

/* 地区选择器样式 */
.region-picker {
  width: 100%;
}

.picker-content {
  background-color: #f8f8f8;
  padding: 24rpx 30rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  min-height: 44rpx;
}

.picker-content.placeholder {
  color: #999;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

/* 文本输入框样式 */
.text-input {
  background-color: #f8f8f8;
  padding: 24rpx 30rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
}

.text-input::placeholder {
  color: #999;
}

/* 多行文本输入框样式 */
.detail-input {
  background-color: #f8f8f8;
  padding: 24rpx 30rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333;
  width: 100%;
  min-height: 120rpx;
  box-sizing: border-box;
}

.detail-input::placeholder {
  color: #999;
}

/* 字符计数 */
.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 开关项样式 */
.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.switch-item .label {
  margin-bottom: 0;
  flex: 1;
}

/* 错误提示样式 */
.error-tip {
  color: #ff4757;
  font-size: 24rpx;
  margin-top: 12rpx;
  padding-left: 8rpx;
  animation: shake 0.3s ease-in-out;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-5rpx); }
  75% { transform: translateX(5rpx); }
}

/* 提交按钮区域 */
.submit-section {
  margin-top: 60rpx;
}

.submit-btn {
  width: 100%;
  background-color: #e0e0e0;
  color: #999;
  font-size: 32rpx;
  padding: 26rpx 0;
  border-radius: 50rpx;
  border: none;
  transition: all 0.3s ease;
}

.submit-btn.active {
  background-color: #007aff;
  color: white;
}

.submit-btn:disabled {
  opacity: 0.6;
}

/* 删除按钮区域（编辑模式） */
.delete-section {
  text-align: center;
  margin-top: 40rpx;
}

.delete-btn {
  background-color: #fff;
  color: #ff4757;
  font-size: 30rpx;
  padding: 24rpx 60rpx;
  border-radius: 50rpx;
  border: 2rpx solid #ff4757;
}

/* 聚焦状态样式 */
.text-input:focus,
.detail-input:focus {
  background-color: #f0f8ff;
  border: 2rpx solid #007aff;
}

/* 表单验证状态 */
.form-item.error .text-input,
.form-item.error .detail-input,
.form-item.error .picker-content {
  border: 2rpx solid #ff4757;
  background-color: #fff5f5;
}

.form-item.success .text-input,
.form-item.success .detail-input {
  border: 2rpx solid #2ed573;
  background-color: #f0fff4;
}

/* 响应式设计 */
@media screen and (max-width: 320px) {
  .container {
    padding: 16rpx 20rpx;
  }
  
  .address-form {
    padding: 30rpx 20rpx;
  }
  
  .label {
    font-size: 30rpx;
  }
  
  .text-input,
  .detail-input,
  .picker-content {
    font-size: 28rpx;
    padding: 20rpx 24rpx;
  }
}

/* 加载状态 */
.loading {
  opacity: 0.6;
  pointer-events: none;
} 
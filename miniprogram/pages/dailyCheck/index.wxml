<view class="daily-check-container">
  <!-- 头部信息区域 -->
  <view class="check-header">
    <view class="header-content">
      <view class="greeting">
        <view class="greeting-text">嗨，{{userInfo.nickName}}</view>
        <view class="greeting-sub">{{signedToday ? '今日已打卡' : '今日未打卡'}}</view>
      </view>
      <view class="calendar-info">
        <view class="calendar-day">{{today}}</view>
        <view class="calendar-weekday">星期{{weekday}}</view>
      </view>
    </view>
    
    <!-- 签到统计信息 -->
    <view class="sign-stats">
      <view class="stat-item">
        <view class="stat-number">{{signStats.totalDays}}</view>
        <view class="stat-label">累计签到</view>
      </view>
      <view class="stat-item">
        <view class="stat-number">{{signStats.currentStreak}}</view>
        <view class="stat-label">连续签到</view>
      </view>
      <view class="stat-item">
        <view class="stat-number">{{signStats.maxContinuous}}</view>
        <view class="stat-label">最高连续</view>
      </view>
    </view>
  </view>
  
  <!-- 签到奖励展示 -->
  <view class="rewards-section">
    <view class="section-title">连续签到奖励</view>
    <view class="rewards-grid">
      <view class="reward-item {{item.status === 'received' ? 'received' : ''}}" 
            wx:for="{{signRewards}}" 
            wx:key="day">
        <view class="reward-day">第{{item.day}}天</view>
        <view class="reward-points">{{item.reward}}积分</view>
        <view class="reward-status">
          <text wx:if="{{item.status === 'received'}}">已领取</text>
          <text wx:else>{{item.reward}}积分</text>
        </view>
      </view>
    </view>
  </view>
  
  <!-- 签到按钮 -->
  <view class="sign-button-section">
    <button class="sign-button {{signedToday ? 'signed' : ''}}" 
            bindtap="handleSignIn"
            disabled="{{signedToday}}">
      {{signedToday ? '今日已签到' : '立即签到'}}
    </button>
    <view class="sign-hint" wx:if="{{!signedToday}}">
      签到可获得积分奖励，连续签到奖励更丰厚！
    </view>
  </view>
  
  <!-- 日历区域 -->
  <view class="calendar-section">
    <view class="calendar-title">{{currentMonth}} 签到记录</view>
    <view class="weekdays">
      <view class="weekday" wx:for="{{['日', '一', '二', '三', '四', '五', '六']}}" wx:key="*this">{{item}}</view>
    </view>
    
    <view class="calendar-days">
      <view class="day {{signDays.includes(item) ? 'signed' : ''}} {{item === today && !signedToday ? 'today' : ''}} {{item === today && signedToday ? 'today-signed' : ''}}" 
        wx:for="{{daysInMonth}}" 
        wx:key="*this">
        {{item}}
        <view class="sign-dot" wx:if="{{signDays.includes(item)}}"></view>
      </view>
    </view>
  </view>
  
  <!-- 任务列表 -->
  <view class="tasks-section">
    <view class="section-title">每日任务</view>
    
    <view class="task-list">
      <view class="task-item" wx:for="{{tasks}}" wx:key="id" bindtap="handleTaskClick" data-id="{{item.id}}">
        <view class="task-info">
          <view class="task-icon">
            <image src="/assets/icons/{{item.icon}}.svg" mode="aspectFit"></image>
          </view>
          <view class="task-details">
            <view class="task-name">{{item.name}}</view>
            <view class="task-desc">{{item.desc}}</view>
          </view>
        </view>
        <view class="task-status {{item.status === 1 ? 'completed' : ''}}">
          {{item.status === 1 ? '已完成' : '去完成'}}
        </view>
      </view>
    </view>
  </view>
  
  <!-- 积分记录 -->
  <view class="points-section">
    <view class="section-title">我的积分</view>
    
    <view class="points-info">
      <view class="current-points">当前积分：{{userInfo.pointsBalance}}</view>
      <view class="points-link" bindtap="navigateTo" data-url="/pages/myPoints/myPoints">查看详情 ></view>
    </view>
  </view>
  
  <!-- 签到成功动画 -->
  <view class="sign-success-animation {{showSignAnimation ? 'show' : ''}}" wx:if="{{showSignAnimation}}">
    <view class="animation-content">
      <view class="success-icon">✓</view>
      <view class="success-text">签到成功！</view>
      <view class="success-reward">+{{signAnimationReward}}积分</view>
    </view>
  </view>
  
  <!-- 加载提示 -->
  <view class="loading" wx:if="{{loading}}">
    <view class="loading-spinner"></view>
    <view class="loading-text">加载中...</view>
  </view>
</view> 
/* 搜索结果页面 - 现代简约风格 */
.search-page {
  background: linear-gradient(180deg, #f8f9fb 0%, #ffffff 100%);
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* ======== 1. 顶部搜索栏 ======== */
.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #4a90e2;
  background: linear-gradient(135deg, #4a90e2 0%, #5ba2f2 100%);
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.3);
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.back-icon {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
}

.search-input-container {
  flex: 1;
  margin-right: 20rpx;
}

.search-input-box {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.search-btn {
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.search-btn text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

/* ======== 2. 商品分类导航 ======== */
.category-tabs {
  background: #ffffff;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  padding: 0 30rpx;
  gap: 30rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 100rpx;
  padding: 20rpx 15rpx;
  border-radius: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: #f8f9fb;
}

.category-item.active {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 25rpx rgba(255, 107, 107, 0.3);
}

.category-icon {
  font-size: 36rpx;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.category-name {
  font-size: 24rpx;
  font-weight: 500;
  color: #666;
  transition: all 0.3s ease;
}

.category-item.active .category-name {
  color: #ffffff;
  font-weight: 600;
}

/* ======== 3. 排序筛选栏 ======== */
.filter-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.sort-section {
  display: flex;
  gap: 40rpx;
}

.sort-item {
  display: flex;
  align-items: center;
  padding: 15rpx 25rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  color: #666;
  background: #f8f9fb;
  transition: all 0.3s ease;
}

.sort-item.active {
  background: linear-gradient(135deg, #4a90e2 0%, #5ba2f2 100%);
  color: #ffffff;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 15rpx rgba(74, 144, 226, 0.3);
}

.sort-icon {
  margin-left: 8rpx;
  font-size: 24rpx;
  transition: transform 0.3s ease;
}

.sort-item.active .sort-icon {
  transform: rotate(180deg);
}

.filter-btn {
  display: flex;
  align-items: center;
  padding: 15rpx 25rpx;
  background: #f8f9fb;
  border-radius: 25rpx;
  position: relative;
  transition: all 0.3s ease;
}

.filter-btn:active {
  transform: scale(0.95);
}

.filter-icon {
  font-size: 28rpx;
  color: #666;
  margin-right: 8rpx;
}

.filter-btn text {
  font-size: 28rpx;
  color: #666;
}

.filter-count {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #ffffff;
  font-weight: bold;
}

/* ======== 4. 商品列表 ======== */
.product-container {
  padding: 30rpx;
}

.product-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-card {
  width: 48%;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  margin-bottom: 20rpx;
}

.product-card:active {
  transform: translateY(-8rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.product-badges {
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  z-index: 2;
  display: flex;
  gap: 8rpx;
}

.badge {
  padding: 8rpx 15rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  border-radius: 15rpx;
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 600;
}

.badge.new {
  background: linear-gradient(135deg, #4a90e2 0%, #5ba2f2 100%);
}

.product-image {
  width: 100%;
  height: 300rpx;
  background: #f8f9fb;
}

.product-info {
  padding: 25rpx;
}

.product-title {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.price-row {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.current-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: 700;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.bottom-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.rating-sales {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.rating {
  font-size: 22rpx;
  color: #ffa500;
  font-weight: 500;
}

.sales {
  font-size: 22rpx;
  color: #999;
}

/* ======== 加载状态 ======== */
.loading-state, .load-more, .no-more {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.load-more text, .no-more text {
  font-size: 26rpx;
  color: #999;
}

/* ======== 6. 优化后的品牌筛选弹窗 ======== */
.brand-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.brand-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(15rpx);
}

.modal-content {
  width: 100%;
  max-height: 85vh;
  background: #ffffff;
  border-radius: 40rpx 40rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 -10rpx 50rpx rgba(0, 0, 0, 0.15);
}

.brand-modal.show .modal-content {
  transform: translateY(0);
}

/* 弹窗头部优化 */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: linear-gradient(135deg, #f8f9fb 0%, #ffffff 100%);
  border-radius: 40rpx 40rpx 0 0;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.modal-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #4a90e2 0%, #5ba2f2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  box-shadow: 0 4rpx 15rpx rgba(74, 144, 226, 0.3);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fb;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.modal-close:active {
  transform: scale(0.9);
  background: #e8e9eb;
}

.close-icon {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

/* 已选中品牌显示区 - 新增 */
.selected-brands {
  padding: 30rpx;
  background: linear-gradient(135deg, #f8f9fb 0%, #ffffff 100%);
  border-bottom: 1rpx solid #f0f0f0;
}

.selected-title {
  margin-bottom: 20rpx;
}

.selected-title text {
  font-size: 28rpx;
  font-weight: 600;
  color: #4a90e2;
}

.selected-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.selected-tag {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #4a90e2 0%, #5ba2f2 100%);
  border-radius: 25rpx;
  animation: slideInUp 0.3s ease;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.tag-name {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

.tag-close {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  width: 24rpx;
  height: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 品牌网格容器 */
.brand-grid-container {
  padding: 30rpx;
  max-height: 500rpx;
  overflow-y: auto;
}

.brand-grid-title {
  margin-bottom: 25rpx;
}

.brand-grid-title text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

/* 品牌网格 - 改为3列布局，无需滚动 */
.brand-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.brand-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 15rpx;
  background: #f8f9fb;
  border-radius: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  border: 2rpx solid transparent;
}

.brand-item:active {
  transform: scale(0.95);
}

.brand-item.selected {
  background: linear-gradient(135deg, #4a90e2 0%, #5ba2f2 100%);
  transform: scale(1.05);
  box-shadow: 0 8rpx 25rpx rgba(74, 144, 226, 0.4);
  border-color: #ffffff;
}

/* 品牌图标 - 新增视觉元素 */
.brand-logo {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #e8e9eb 0%, #f8f9fb 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
  transition: all 0.3s ease;
}

.brand-item.selected .brand-logo {
  background: rgba(255, 255, 255, 0.2);
  box-shadow: 0 4rpx 15rpx rgba(255, 255, 255, 0.3);
}

.brand-initial {
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
}

.brand-item.selected .brand-initial {
  color: #ffffff;
}

.brand-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.brand-item.selected .brand-name {
  color: #ffffff;
  font-weight: 600;
}

/* 选中状态指示器 */
.brand-check {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.brand-check.checked {
  background: #ffffff;
  border-color: #ffffff;
  transform: scale(1.1);
}

.check-icon {
  font-size: 18rpx;
  color: #4a90e2;
  font-weight: bold;
}

/* 弹窗底部优化 */
.modal-footer {
  padding: 30rpx;
  background: linear-gradient(135deg, #f8f9fb 0%, #ffffff 100%);
  border-top: 1rpx solid #f0f0f0;
}

.footer-info {
  text-align: center;
  margin-bottom: 20rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
}

.footer-buttons {
  display: flex;
  gap: 20rpx;
}

.btn-reset, .btn-confirm {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 25rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn-reset {
  background: #f8f9fb;
  color: #666;
  border: 2rpx solid #e8e9eb;
}

.btn-confirm {
  background: linear-gradient(135deg, #4a90e2 0%, #5ba2f2 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.3);
}

.btn-reset:active, .btn-confirm:active {
  transform: scale(0.95);
}

.btn-icon {
  font-size: 26rpx;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .product-item {
    width: 100%;
  }
  
  .category-item {
    margin-right: 30rpx;
    min-width: 100rpx;
  }
  
  .sort-item {
    margin-right: 30rpx;
  }
  
  /* 小屏幕下品牌网格改为2列 */
  .brand-grid {
    grid-template-columns: repeat(2, 1fr);
  }
} 
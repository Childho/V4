/* myBooking.wxss */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.my-booking-container {
  padding: 20rpx;
}

/* 标签页样式 */
.tab-header {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #3e7fff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #3e7fff;
  border-radius: 3rpx;
}

/* 预约卡片样式 */
.booking-card {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.booking-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 15rpx;
}

.venue-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.booking-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.booking-status.upcoming {
  background-color: #e6f7ff;
  color: #1890ff;
}

.booking-status.completed {
  background-color: #f6ffed;
  color: #52c41a;
}

.booking-status.cancelled {
  background-color: #fff1f0;
  color: #ff4d4f;
}

/* 预约信息样式 */
.booking-info {
  padding: 10rpx 0;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.info-item image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}

.info-item text {
  font-size: 26rpx;
  color: #666;
}

/* 按钮区域样式 */
.booking-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 15rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  margin-left: 20rpx;
  font-size: 24rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #e8e8e8;
}

.cancel-btn {
  background-color: #fff1f0;
  color: #ff4d4f;
  border-color: #ffccc7;
}

.review-btn {
  background-color: #f6ffed;
  color: #52c41a;
  border-color: #b7eb8f;
}

/* 无数据提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-tip image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-tip text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.book-now-btn {
  background-color: #3e7fff;
  color: #fff;
  font-size: 28rpx;
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
} 
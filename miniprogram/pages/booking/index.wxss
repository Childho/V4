}

.goods-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.goods-points {
  font-size: 26rpx;
  color: #4169e1;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.goods-stock {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.btn-exchange {
  align-self: flex-start;
  padding: 12rpx 32rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
  transition: all 0.3s ease;
  box-sizing: border-box;
  white-space: nowrap;
}

.btn-exchange::after {
  border: none;
}

.btn-exchange.active {
  background: #4169e1;
  color: #ffffff;
}

.btn-exchange.disabled {
  background: #cccccc;
  color: #ffffff;
}

/* 兑换记录样式 */
.exchange-records {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  width: 100%;
  box-sizing: border-box;
}

.record-info {
  flex: 1;
  box-sizing: border-box;
}

.record-goods {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.record-time {
  font-size: 24rpx;
  color: #666666;
}

.record-points {
  font-size: 26rpx;
  color: #ff4757;
  font-weight: bold;
  white-space: nowrap;
}

/* === Tab3: 推广返佣样式 === */

/* 推广数据统计头部 */
.promotion-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  border-radius: 20rpx;
  margin: 20rpx;
  color: white;
}

.promotion-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #fff;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
  color: #fff;
}

/* 账户余额区域 */
.balance-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  padding: 25rpx;
  border-radius: 15rpx;
  backdrop-filter: blur(10rpx);
}

.balance-info {
  flex: 1;
}

.balance-title {
  font-size: 26rpx;

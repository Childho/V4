  flex-direction: column;
  gap: 16rpx;
  width: 100%;
}

.string-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  width: 100%;
}

.string-item:active {
  border-color: #4169e1;
  background: #f0f4ff;
}

.string-info {
  flex: 1;
  min-width: 0; /* 防止flex元素溢出 */
}

.string-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.string-desc {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.string-price {
  font-size: 26rpx;
  color: #ff4757;
  font-weight: bold;
}


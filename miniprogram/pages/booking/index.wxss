.booking-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
}

.content-area {
  padding: 0 0 30rpx;
}

/* 日期选择样式 */
.date-selector {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.date-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.date-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.month-display {
  font-size: 28rpx;
  color: #666;
}

.date-scroll {
  width: 100%;
  white-space: nowrap;
}

.date-items {
  display: inline-flex;
  padding: 10rpx 0;
}

.date-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  padding: 15rpx 0;
  min-width: 100rpx;
}

.date-item.active {
  background-color: #1296db;
  color: #fff;
  border-radius: 10rpx;
}

.day-number {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.day-name {
  font-size: 24rpx;
}

/* 时间段选择样式 */
.time-selector {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.time-header {
  margin-bottom: 30rpx;
}

.time-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.time-slots {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.time-slot {
  width: 31%;
  text-align: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.time-slot.active {
  background-color: #1296db;
  color: #fff;
}

.time-slot.disabled {
  background-color: #f0f0f0;
  color: #999;
}

/* 场馆预约样式 */
.venue-section {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.more-link {
  font-size: 26rpx;
  color: #999;
}

.venue-list {
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.venue-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.venue-item:last-child {
  border-bottom: none;
}

.venue-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.venue-info {
  flex: 1;
}

.venue-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
}

.venue-address {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.venue-rating {
  display: flex;
  align-items: center;
}

.stars {
  display: flex;
  margin-right: 10rpx;
}

.star-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 4rpx;
}

.rating-text {
  font-size: 24rpx;
  color: #ff6b00;
  margin-right: 10rpx;
}

.booking-count {
  font-size: 22rpx;
  color: #999;
}

.book-button {
  padding: 15rpx 30rpx;
  background-color: #1296db;
  color: #fff;
  font-size: 26rpx;
  border-radius: 30rpx;
}

/* 教练预约样式 */
.coach-section {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.coach-scroll {
  width: 100%;
}

.coach-items {
  display: inline-flex;
  padding: 20rpx 0;
}

.coach-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  width: 200rpx;
}

.coach-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
}

.coach-info {
  text-align: center;
}

.coach-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.coach-level {
  font-size: 24rpx;
  color: #999;
}

/* 我的预约样式 */
.my-booking-section {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.booking-list {
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.booking-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.booking-info {
  flex: 1;
}

.booking-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
}

.booking-place {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.booking-time {
  font-size: 24rpx;
  color: #999;
}

.booking-status {
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.booking-status.confirmed {
  background-color: #e6f7ff;
  color: #1296db;
}

.booking-status.pending {
  background-color: #fff7e6;
  color: #ff9500;
}

.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
} 
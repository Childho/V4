  border-radius: 24rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.btn-control {
  width: 60rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4169e1;
  color: #ffffff;
  font-size: 32rpx;
  border: none;
  line-height: 1;
  flex-shrink: 0;
}

.btn-control::after {

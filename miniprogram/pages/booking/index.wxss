/* 整体容器样式 */
.booking-container {
  background-color: #F5F5F5;
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
  padding-bottom: 40rpx; /* 移除为底部导航栏预留的空间 */
}

/* 顶部标签页导航 */
.tab-nav {
  display: flex;
  background-color: #FFF;
  padding: 20rpx 30rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  border-bottom: 1rpx solid #EFEFEF;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  padding: 20rpx 0;
}

.tab-item.active {
  color: #4169E1;
  font-weight: 500;
}

.tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #4169E1;
  border-radius: 2rpx;
}

/* 内容视图 */
.content-view {
  padding-bottom: 30rpx;
}

/* 日期选择器样式 */
.date-selector {
  background: #FFFFFF;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.date-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #333;
}

.date-month {
  color: #999;
}

.date-scroll {
  display: flex;
  white-space: nowrap;
}

.date-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border: 1px solid #EEEEEE;
  border-radius: 8rpx;
}

.date-item.active {
  background-color: #4169E1;
  border-color: #4169E1;
}

.date-day {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.date-weekday {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.date-item.active .date-day,
.date-item.active .date-weekday {
  color: #FFFFFF;
}

/* 羽毛球馆列表区域 */
.venues-section {
  background: #FFFFFF;
  padding: 30rpx;
}

.venue-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #333;
}

.sort-btn {
  display: flex;
  align-items: center;
  color: #999;
  font-size: 24rpx;
}

.sort-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  background-image: url('/assets/icons/sort.png');
  background-size: contain;
}

/* 场馆列表项 */
.venue-list {
  border-radius: 8rpx;
}

.venue-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #EEEEEE;
}

.venue-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.venue-info {
  flex: 1;
}

.venue-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.venue-rating {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.rating-stars {
  display: flex;
  margin-right: 10rpx;
}

.star {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

.rating-score {
  font-size: 24rpx;
  color: #FF9500;
}

.venue-address {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.location-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
  background-image: url('/assets/icons/location.png');
  background-size: contain;
}

.venue-distance {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.venue-discount {
  font-size: 24rpx;
  color: #4169E1;
}

/* 时间段选择 */
.time-slots {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.time-slot {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  margin: 0 10rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #333;
}

.time-slot:first-child {
  margin-left: 0;
}

.time-slot:last-child {
  margin-right: 0;
}

.time-slot.active {
  background: #4169E1;
  color: #FFFFFF;
}

/* 预约按钮 */
.book-now-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #4169E1;
  text-align: center;
  color: #FFFFFF;
  font-size: 30rpx;
  border-radius: 44rpx;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
}

/* 穿线服务样式 */
.string-card {
  background: #FFFFFF;
  border-radius: 8rpx;
  margin: 20rpx;
  padding: 30rpx;
}

.string-card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.racket-info {
  width: 100%;
}

.input-item {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.input-field {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #EEEEEE;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.pounds-requirement {
  margin-top: 30rpx;
}

.pounds-selector {
  margin-top: 20rpx;
}

.pounds-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.pounds-control {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}

.pounds-btn {
  width: 60rpx;
  height: 60rpx;
  background: #F5F5F5;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #4169E1;
}

.pounds-value {
  margin: 0 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  min-width: 60rpx;
  text-align: center;
}

/* 线材筛选 */
.string-filter {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.filter-tag {
  height: 60rpx;
  padding: 0 30rpx;
  background: #F5F5F5;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.filter-tag.active {
  background: #4169E1;
  color: #FFFFFF;
}

/* 线材列表 */
.string-list {
  border-top: 1rpx solid #EEEEEE;
  padding-top: 30rpx;
}

.string-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #EEEEEE;
}

.string-select-dot {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #CCCCCC;
  border-radius: 50%;
  margin-right: 20rpx;
  position: relative;
}

.string-select-dot.active {
  border-color: #4169E1;
}

.string-select-dot.active::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20rpx;
  height: 20rpx;
  background: #4169E1;
  border-radius: 50%;
}

.string-info {
  flex: 1;
}

.string-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.string-desc {
  font-size: 24rpx;
  color: #999;
}

.string-price {
  font-size: 30rpx;
  color: #FF5000;
  font-weight: 500;
}

/* 底部价格和下单按钮 */
.string-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  z-index: 100;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.total-price {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.price {
  font-size: 36rpx;
  color: #FF5000;
  font-weight: 500;
  margin-left: 20rpx;
}

.order-btn {
  width: 200rpx;
  height: 80rpx;
  background: #4169E1;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #FFFFFF;
}

/* 我的服务页样式 */
.my-service-header {
  display: flex;
  background: #FFFFFF;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.service-filter-tab {
  flex: 1;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.service-filter-tab.active {
  color: #4169E1;
  font-weight: 500;
}

.service-filter-tab.active::after {
  content: "";
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #4169E1;
  border-radius: 2rpx;
}

.my-service-list {
  padding: 0 20rpx;
}

.service-card {
  background: #FFFFFF;
  border-radius: 8rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.service-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #EEEEEE;
}

.service-card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.service-card-status {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
}

.service-card-status.confirmed {
  background: #E6F7FF;
  color: #1890FF;
}

.service-card-status.processing {
  background: #FFF7E6;
  color: #FF9500;
}

.service-card-status.pending {
  background: #F5F5F5;
  color: #999999;
}

.service-card-info {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #666;
}

.info-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.info-icon.location {
  background-image: url('/assets/icons/location.png');
  background-size: contain;
}

.info-icon.time {
  background-image: url('/assets/icons/time.png');
  background-size: contain;
}

.info-icon.price {
  background-image: url('/assets/icons/price.png');
  background-size: contain;
}

.info-icon.string {
  background-image: url('/assets/icons/string.png');
  background-size: contain;
}

.info-icon.racket {
  background-image: url('/assets/icons/racket.png');
  background-size: contain;
}

.info-icon.shop {
  background-image: url('/assets/icons/shop.png');
  background-size: contain;
}

.service-card-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  height: 60rpx;
  padding: 0 30rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.action-btn.cancel {
  background: #F5F5F5;
  color: #666;
}

.action-btn.details {
  background: #4169E1;
  color: #FFFFFF;
}

.action-btn.contact {
  background: #F5F5F5;
  color: #666;
}

/* 底部导航栏 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  display: flex;
  padding: 10rpx 0;
  background: #FFFFFF;
  border-top: 1rpx solid #F0F0F0;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #999999;
}

.tab-bar-item.active {
  color: #4169E1;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx;
}

.content-area {
  padding: 0 0 30rpx;
}


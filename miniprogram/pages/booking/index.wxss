}

.balance-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.btn-withdraw {
  background: #fff;
  color: #667eea;
  border: none;
  padding: 0 30rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  font-weight: bold;
  min-width: 140rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-withdraw.active {
  background: #fff;
  color: #667eea;
}

.btn-withdraw.disabled {
  background: rgba(255, 255, 255, 0.5);
  color: rgba(102, 126, 234, 0.5);
}

/* 推广二维码区域 */
.qr-code-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  margin: 0 20rpx;
}

.qr-code-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.qr-code-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 15rpx;
}

.btn-qr-action {
  background: #667eea;
  color: white;
  border: none;
  padding: 12rpx 25rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  min-width: 120rpx;
}

.qr-code-tip {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  line-height: 1.4;
  margin-bottom: 15rpx;
}

/* 佣金明细记录样式 */
.commission-records,
.withdraw-records {
  margin: 0 20rpx;
}

.commission-record,
.withdraw-record {
  background: #fff;
  padding: 25rpx;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
  border-left: 4rpx solid #667eea;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.commission-desc,
.withdraw-desc {
  flex: 1;
}

.desc-main {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
  font-weight: 500;
}

.desc-type {
  font-size: 22rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  display: inline-block;
}

.desc-order {
  font-size: 22rpx;
  color: #999;
  margin-top: 5rpx;
}

.commission-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #27ae60;
}

.withdraw-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #e74c3c;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-status {
  font-size: 24rpx;
  padding: 6rpx 15rpx;
  border-radius: 15rpx;
  background: #f0f0f0;
  color: #666;
}

.record-status.success {
  background: #d4edda;
  color: #155724;
}

.record-status.processing {
  background: #fff3cd;
  color: #856404;
}

/* 提现弹窗样式 */
.withdraw-modal {
  width: 90%;
  max-width: 600rpx;
}

.withdraw-balance {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 25rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  text-align: center;
  color: white;
}

.balance-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.balance-value {
  font-size: 36rpx;
  font-weight: bold;
}

.withdraw-input-section {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.withdraw-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  box-sizing: border-box;
}

.withdraw-input:focus {
  border-color: #667eea;
  background: #fff;
}

.withdraw-tip {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
  text-align: center;
}

/* 推广规则样式优化 */
.rules-content {
  margin: 0 20rpx;
  background: #f8f9fa;
  padding: 25rpx;
  border-radius: 12rpx;
}

.rule-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 12rpx;
  position: relative;
  padding-left: 20rpx;
}

.rule-item:before {
  content: "•";
  color: #667eea;
  font-weight: bold;
  position: absolute;
  left: 0;
}

.rule-item:last-child {
  margin-bottom: 0;
}


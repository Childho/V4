  background: #ffffff;
}

/* 磅数控制样式 */
.pounds-container {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.pounds-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-width: 0; /* 防止flex元素溢出 */
}

.pounds-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  flex-shrink: 0;
}


  padding: 40rpx;
  text-align: center;
  color: #ffffff;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.points-title {
  font-size: 28rpx;
  margin-bottom: 16rpx;
  opacity: 0.9;
}

.points-value {

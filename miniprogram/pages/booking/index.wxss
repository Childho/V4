  width: 36rpx;
  height: 36rpx;
  border: 3rpx solid #cccccc;
  border-radius: 50%;
  margin-left: 20rpx;
  position: relative;
  flex-shrink: 0;
}

.radio.selected {
  border-color: #4169e1;
}

.radio.selected::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 18rpx;
  height: 18rpx;
  background: #4169e1;
  border-radius: 50%;
}

/* 备注输入框样式 */

/* 全局样式重置 */
* {
  box-sizing: border-box;
}

/* 服务页面主容器样式 */
.service-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  background-color: #f5f5f5;
  /* iOS安全区域适配 */
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* Tab切换栏样式 */
.tab-bar {
  display: flex;
  width: 100%;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  z-index: 100;
  flex-shrink: 0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  color: #666666;
  position: relative;
  transition: all 0.3s ease;
  min-width: 0; /* 防止flex元素溢出 */
}

.tab-item.active {
  color: #4169e1;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #4169e1;
  border-radius: 2rpx;
}

/* Tab内容区域 */
.tab-content {
  flex: 1;
  position: relative;
  overflow: hidden;
  width: 100%;
  min-height: 0; /* 确保flex子项能够缩小 */
}

.content-panel {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  transition: opacity 0.3s ease;
}

.content-panel.show {
  opacity: 1;
  z-index: 1;
}

.content-panel.hide {
  opacity: 0;
  z-index: 0;
}

.scroll-content {
  width: 100%;
  height: 100%;
  padding: 20rpx 20rpx 120rpx 20rpx; /* 增加底部padding，防止被底部栏遮挡 */
}

/* 通用区块样式 */
.section {
  width: 100%;
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
}

/* === Tab1: 穿线服务样式 === */

/* 输入框样式 */
.input-field {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.input-field:focus {

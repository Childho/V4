  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  gap: 30rpx;
  width: 100%;
  z-index: 10;
  /* iOS安全区域适配 */
  padding-bottom: calc(30rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
}

.total-price {
  flex: 1;
  min-width: 0; /* 防止flex元素溢出 */
}


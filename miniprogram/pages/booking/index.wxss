  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.goods-item {
  display: flex;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

.goods-item:active {
  background: #f0f4ff;
}

.goods-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;

/* 服务页面主容器样式 */
.service-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  /* 添加iOS全面屏适配 */
  padding-top: env(safe-area-inset-top);
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
}

/* 自定义导航栏样式 */
.custom-nav-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  z-index: 200;
  width: 100%;
  box-sizing: border-box;
  /* 调整顶部间距，与安全区域适配相结合 */
  padding-top: 8rpx;
  margin-top: 20rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
}

/* Tab切换栏样式 */
.tab-bar {
  display: flex;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  z-index: 100;
  width: 100%;
  box-sizing: border-box;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666666;
  position: relative;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.tab-item.active {
  color: #4169e1;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #4169e1;
  border-radius: 2rpx;
}

/* Tab内容区域 */
.tab-content {
  flex: 1;
  position: relative;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

.content-panel {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  transition: opacity 0.3s ease;
  box-sizing: border-box;
}

.content-panel.show {
  opacity: 1;
  z-index: 1;
}

.content-panel.hide {
  opacity: 0;
  z-index: 0;
}

.scroll-content {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 底部空白区域，防止内容被底部结算区遮挡 */
.scroll-bottom-padding {
  height: 120rpx;
  width: 100%;
}

/* 通用区块样式 */
.section {
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
  width: 100%;
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
}

/* === Tab1: 穿线服务样式 === */

/* 输入框样式 */
.input-field {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #4169e1;
  background: #ffffff;
}

/* 磅数控制样式 - 统一磅数选择器设计 */
.pounds-unified-container {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.pounds-selector {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 24rpx;
  padding: 16rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  gap: 32rpx;
  width: 80%;
  max-width: 400rpx;
  justify-content: center;
  box-sizing: border-box;
}

.pounds-control-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: #4169e1;
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.pounds-control-btn:active {
  background: #2c4fd6;
  transform: scale(0.95);
}

.pounds-control-btn::after {
  border: none;
}

.pounds-display {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 4rpx;
  flex: 1;
  min-width: 120rpx;
  box-sizing: border-box;
}

.pounds-number {
  font-size: 40rpx;
  color: #333333;
  font-weight: bold;
  line-height: 1;
}

.pounds-unit {
  font-size: 28rpx;
  color: #666666;
  font-weight: normal;
  line-height: 1;
}

/* 品牌选择样式 */
.brand-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
  width: 100%;
  box-sizing: border-box;
}

.brand-tab {
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666666;
  transition: all 0.3s ease;
  white-space: nowrap;
  box-sizing: border-box;
}

.brand-tab.active {
  background: #4169e1;
  color: #ffffff;
}

/* 线材列表样式 */
.strings-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.string-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

.string-item:active {
  border-color: #4169e1;
  background: #f0f4ff;
}

.string-info {
  flex: 1;
  box-sizing: border-box;
}

.string-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.string-desc {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.string-price {
  font-size: 26rpx;
  color: #ff4757;
  font-weight: bold;
}

.radio {
  width: 36rpx;
  height: 36rpx;
  border: 3rpx solid #cccccc;
  border-radius: 50%;
  margin-left: 20rpx;
  position: relative;
  flex-shrink: 0;
  box-sizing: border-box;
}

.radio.selected {
  border-color: #4169e1;
}

.radio.selected::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 18rpx;
  height: 18rpx;
  background: #4169e1;
  border-radius: 50%;
}

/* 备注输入框样式 */
.textarea-field {
  width: 100%;
  min-height: 120rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fafafa;
  resize: none;
  box-sizing: border-box;
}

.textarea-field:focus {
  border-color: #4169e1;
  background: #ffffff;
}

/* 底部结算栏样式 */
.bottom-bar {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  gap: 30rpx;
  width: 100%;
  box-sizing: border-box;
  /* 固定在底部，为"穿线服务"tab独有 */
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 50;
}

.total-price {
  flex: 1;
  box-sizing: border-box;
}

.price-label {
  font-size: 28rpx;
  color: #666666;
}

.price-value {
  font-size: 36rpx;
  color: #ff4757;
  font-weight: bold;
}

.btn-order {
  flex-shrink: 0;
  width: 240rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.btn-order::after {
  border: none;
}

.btn-order.active {
  background: linear-gradient(135deg, #4169e1, #667eea);
  color: #ffffff;
}

.btn-order.disabled {
  background: #cccccc;
  color: #ffffff;
}

/* === Tab2: 积分兑换样式 === */

/* 积分头部样式 */
.points-header {
  background: linear-gradient(135deg, #4169e1, #667eea);

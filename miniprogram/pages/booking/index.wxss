/* 二级tab栏样式 */
.sub-tab-bar {
  display: flex;
  background: #ffffff;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.sub-tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 26rpx;
  color: #666666;
  position: relative;
  transition: all 0.3s ease;
  box-sizing: border-box;
  white-space: nowrap;
}

.sub-tab-item.active {
  color: #4169e1;
  font-weight: bold;
}

.sub-tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 3rpx;
  background: #4169e1;
  border-radius: 2rpx;
}

/* 服务记录样式 */
.service-records {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.service-record {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
  width: 100%;
  box-sizing: border-box;
}

/* 穿线记录样式 */
.string-record .record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.racket-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
  flex: 1;
}

.service-status {
  font-size: 24rpx;
  color: #4169e1;
  background: #f0f4ff;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  white-space: nowrap;
  box-sizing: border-box;
}

.progress-container {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  gap: 20rpx;
  box-sizing: border-box;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4169e1, #667eea);
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #4169e1;
  font-weight: bold;
  white-space: nowrap;
}

.service-detail {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

/* 物流记录样式 */
.logistics-record .record-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}

.goods-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
  flex: 1;
}

.express-number {
  font-size: 24rpx;
  color: #666666;
  white-space: nowrap;
}

.logistics-timeline {
  position: relative;
  padding-left: 40rpx;
  box-sizing: border-box;
}

.timeline-item {
  position: relative;
  padding-bottom: 24rpx;
  box-sizing: border-box;
}

.timeline-item:not(:last-child)::before {
  content: '';
  position: absolute;
  left: -32rpx;
  top: 24rpx;
  width: 2rpx;
  height: calc(100% - 12rpx);
  background: #e5e5e5;
}

.timeline-dot {
  position: absolute;
  left: -40rpx;
  top: 8rpx;
  width: 16rpx;
  height: 16rpx;
  background: #4169e1;
  border-radius: 50%;
}

.timeline-content {
  padding-left: 16rpx;
  box-sizing: border-box;
}

.timeline-desc {

<!--服务页面主容器-->
<view class="service-container">
  <!-- 自定义导航栏 -->
  <view class="custom-nav-bar">
    <view class="nav-title">服务</view>
  </view>
  
  <!-- Tab切换栏 -->
  <view class="tab-bar">
    <view 
      class="tab-item {{currentTab === 0 ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-index="0"
    >
      穿线服务
    </view>
    <view 
      class="tab-item {{currentTab === 1 ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-index="1"
    >
      积分兑换
    </view>
    <view 
      class="tab-item {{currentTab === 2 ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-index="2"
    >
      推广返佣
    </view>
    <view 
      class="tab-item {{currentTab === 3 ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-index="3"
    >
      我的服务
    </view>
  </view>

  <!-- Tab内容区域 -->
  <view class="tab-content">
    
    <!-- Tab1: 穿线服务 -->
    <view class="content-panel {{currentTab === 0 ? 'show' : 'hide'}}">
      <scroll-view scroll-y="true" class="scroll-content" enable-flex="true">
        
        <!-- 球拍信息输入 -->
        <view class="section">
          <view class="section-title">球拍信息</view>
          <input 
            class="input-field"
            placeholder="请输入球拍品牌与型号"
            value="{{stringService.racket_brand}}"
            bindinput="onRacketInput"
          />
        </view>

        <!-- 磅数要求 -->
        <view class="section">
          <view class="section-title">磅数要求</view>
          <view class="pounds-unified-container">
            <view class="pounds-selector">
              <button class="pounds-control-btn" bindtap="changePounds" data-action="minus">-</button>
              <view class="pounds-display">
                <text class="pounds-number">{{stringService.pounds}}</text>
                <text class="pounds-unit">磅</text>
              </view>
              <button class="pounds-control-btn" bindtap="changePounds" data-action="plus">+</button>
            </view>
          </view>
        </view>

        <!-- 线材选择 -->
        <view class="section">
          <view class="section-title">线材选择</view>
          <!-- 品牌筛选 -->
          <view class="brand-tabs">
            <view 
              wx:for="{{stringBrands}}" 
              wx:key="id"
              class="brand-tab {{selectedBrand === item.id ? 'active' : ''}}"
              bindtap="selectBrand"
              data-brand="{{item.id}}"
            >
              {{item.name}}
            </view>
          </view>
          <!-- 线材列表 -->
          <view class="strings-list">
            <view 
              wx:for="{{filteredStrings}}" 
              wx:key="id"
              class="string-item"
              bindtap="selectString"
              data-string="{{item.id}}"
            >
              <view class="string-info">
                <view class="string-name">{{item.name}}</view>
                <view class="string-desc">{{item.description}}</view>
                <view class="string-price">¥{{item.price}}</view>
              </view>
              <view class="radio {{stringService.string_id === item.id ? 'selected' : ''}}"></view>
            </view>
          </view>
        </view>

        <!-- 备注信息 -->
        <view class="section">
          <view class="section-title">备注信息</view>
          <textarea 
            class="textarea-field"
            placeholder="有特殊要求请填写"
            value="{{stringService.remark}}"
            bindinput="onRemarkInput"
            maxlength="200"
          ></textarea>
        </view>

        <!-- 底部空白区域，防止内容被底部结算区遮挡 -->
        <view class="scroll-bottom-padding"></view>

      </scroll-view>

      <!-- 底部结算区 -->
      <view class="bottom-bar">
        <view class="total-price">
          <text class="price-label">总价：</text>
          <text class="price-value">¥{{stringService.total_price}}</text>
        </view>
        <button 
          class="btn-order {{canSubmitOrder ? 'active' : 'disabled'}}"
          disabled="{{!canSubmitOrder}}"
          bindtap="submitOrder"
        >
          立即下单
        </button>
      </view>
    </view>

    <!-- Tab2: 积分兑换 -->
    <view class="content-panel {{currentTab === 1 ? 'show' : 'hide'}}">
      <scroll-view scroll-y="true" class="scroll-content" enable-flex="true">
        
        <!-- 我的积分 -->
        <view class="points-header">
          <view class="points-title">我的积分</view>
          <view class="points-value">{{pointsData.user_points}}</view>
        </view>

        <!-- 可兑换商品 -->
        <view class="section">
          <view class="section-title">可兑换商品</view>
          <view class="goods-grid">
            <view 
              wx:for="{{pointsData.goods}}" 
              wx:key="id"
              class="goods-item"
            >
              <image class="goods-image" src="{{item.img}}" mode="aspectFill"></image>
              <view class="goods-info">
                <view class="goods-name">{{item.name}}</view>
                <view class="goods-points">{{item.points}}积分</view>
                <view class="goods-stock">库存：{{item.stock}}</view>
                <button 
                  class="btn-exchange {{pointsData.user_points >= item.points && item.stock > 0 ? 'active' : 'disabled'}}"
                  disabled="{{pointsData.user_points < item.points || item.stock <= 0}}"
                  bindtap="exchangeGoods"
                  data-goods="{{item}}"
                >
                  兑换
                </button>
              </view>
            </view>
          </view>
        </view>

        <!-- 最近兑换记录 -->
        <view class="section">
          <view class="section-title">最近兑换记录</view>
          <view class="exchange-records">
            <view 
              wx:for="{{pointsData.recent_exchanges}}" 
              wx:key="index"
              class="record-item"
            >
              <view class="record-info">
                <view class="record-goods">{{item.goods_name}}</view>
                <view class="record-time">{{item.date}}</view>
              </view>
              <view class="record-points">-{{item.points}}积分</view>
            </view>
          </view>
        </view>

        <!-- 底部空白区域 -->
        <view class="scroll-bottom-padding"></view>

      </scroll-view>
    </view>

    <!-- Tab3: 推广返佣 -->
    <view class="content-panel {{currentTab === 2 ? 'show' : 'hide'}}">
      <scroll-view scroll-y="true" class="scroll-content" enable-flex="true">
        
        <!-- 数据统计面板 - 优化版 -->
        <view class="promotion-header">
          <view class="promotion-stats">
            <view class="stat-item">
              <view class="stat-value">{{promotionData.total_earnings || 0}}</view>
              <view class="stat-label">累计返佣（元）</view>
            </view>
            <view class="stat-item">
              <view class="stat-value">{{promotionData.invited_users || 0}}</view>
              <view class="stat-label">累计邀请人数</view>
            </view>
            <view class="stat-item">
              <view class="stat-value">{{promotionData.today_earnings || 0}}</view>
              <view class="stat-label">今日收益（元）</view>
            </view>
          </view>
          
          <!-- 账户余额区域 -->
          <view class="balance-section">
            <view class="balance-info">
              <view class="balance-title">账户余额</view>
              <view class="balance-amount">¥{{promotionData.account_balance || 0}}</view>
            </view>
            <button 
              class="btn-withdraw {{promotionData.account_balance >= withdrawData.min_withdraw_amount ? 'active' : 'disabled'}}"
              disabled="{{promotionData.account_balance < withdrawData.min_withdraw_amount}}"
              bindtap="showWithdrawModal"
            >
              余额提现
            </button>
          </view>
        </view>

        <!-- 推广二维码区域 -->
        <view class="section">
          <view class="section-title">推广二维码</view>
          <view class="qr-code-container">
            <image class="qr-code-image" src="{{promotionData.qr_code_url}}" mode="aspectFit"></image>
            <view class="qr-code-buttons">
              <button class="btn-qr-action" bindtap="saveQrCode">保存到相册</button>
              <button class="btn-qr-action" bindtap="copyInviteLink">复制链接</button>
            </view>
            <view class="qr-code-tip">分享二维码或链接，邀请好友获得丰厚返佣</view>
          </view>
        </view>

        <!-- 佣金明细 -->
        <view class="section">
          <view class="section-title">佣金明细</view>
          <view class="commission-records">
            <view 
              wx:for="{{promotionData.commission_records || []}}" 
              wx:key="index"
              class="commission-record"
            >
              <view class="record-header">
                <view class="commission-desc">
                  <view class="desc-main">{{item.desc}}</view>
                  <view class="desc-type">{{item.type === 'invite' ? '邀请奖励' : '消费返佣'}}</view>
                </view>
                <view class="commission-amount">+¥{{item.amount}}</view>
              </view>
              <view class="record-footer">
                <view class="record-time">{{item.date}}</view>
                <view class="record-status {{item.status === '已到账' ? 'success' : ''}}">{{item.status}}</view>
              </view>
            </view>
          </view>
          
          <!-- 空状态提示 -->
          <view wx:if="{{!promotionData.commission_records || promotionData.commission_records.length === 0}}" class="empty-state">
            <image class="empty-icon" src="/assets/icons/empty.png"></image>
            <view class="empty-text">暂无佣金记录</view>
          </view>
        </view>

        <!-- 提现记录 -->
        <view class="section">
          <view class="section-title">提现记录</view>
          <view class="withdraw-records">
            <view 
              wx:for="{{promotionData.withdraw_records || []}}" 
              wx:key="index"
              class="withdraw-record"
            >
              <view class="record-header">
                <view class="withdraw-desc">
                  <view class="desc-main">余额提现</view>
                  <view class="desc-order">订单号：{{item.order_no}}</view>
                </view>
                <view class="withdraw-amount">-¥{{item.amount}}</view>
              </view>
              <view class="record-footer">
                <view class="record-time">{{item.date}}</view>
                <view class="record-status {{item.status === '已到账' ? 'success' : 'processing'}}">{{item.status}}</view>
              </view>
            </view>
          </view>
          
          <!-- 空状态提示 -->
          <view wx:if="{{!promotionData.withdraw_records || promotionData.withdraw_records.length === 0}}" class="empty-state">
            <image class="empty-icon" src="/assets/icons/empty.png"></image>
            <view class="empty-text">暂无提现记录</view>
          </view>
        </view>

        <!-- 推广规则 -->
        <view class="section">
          <view class="section-title">推广规则</view>
          <view class="rules-content">
            <view class="rule-item">1. 邀请好友注册并完成首次消费，获得20元返佣</view>
            <view class="rule-item">2. 好友每次消费，您可获得订单金额5%的返佣</view>
            <view class="rule-item">3. 返佣金额实时到账，可在账户余额中查看</view>
            <view class="rule-item">4. 最低提现金额{{withdrawData.min_withdraw_amount}}元，提现免手续费</view>
            <view class="rule-item">5. 返佣有效期为邀请成功后12个月内</view>
          </view>
        </view>

        <!-- 底部空白区域 -->
        <view class="scroll-bottom-padding"></view>

      </scroll-view>
    </view>

    <!-- Tab4: 我的服务 -->
    <view class="content-panel {{currentTab === 3 ? 'show' : 'hide'}}">
      
      <!-- 二级tab栏 -->
      <view class="sub-tab-bar">
        <view 
          wx:for="{{subTabs}}" 
          wx:key="id"
          class="sub-tab-item {{currentSubTab === item.id ? 'active' : ''}}"
          bindtap="switchSubTab"
          data-tab="{{item.id}}"
        >
          {{item.name}}
        </view>
      </view>

      <scroll-view scroll-y="true" class="scroll-content" enable-flex="true">
        
        <!-- 服务记录列表 -->
        <view class="service-records">
          <view 
            wx:for="{{filteredServiceList}}" 
            wx:key="index"
            class="service-record"
          >
            
            <!-- 穿线进度类型 -->
            <view wx:if="{{item.service_type === '穿线进度'}}" class="string-record">
              <view class="record-header">
                <view class="racket-name">{{item.racket}}</view>
                <view class="service-status">{{item.status}}</view>
              </view>
              <view class="progress-container">
                <view class="progress-bar">
                  <view class="progress-fill" style="width: {{item.progress}}%"></view>
                </view>
                <view class="progress-text">{{item.progress}}%</view>
              </view>
              <view class="service-detail">{{item.detail}}</view>
            </view>

            <!-- 奖品物流类型 -->
            <view wx:if="{{item.service_type === '奖品物流'}}" class="logistics-record">
              <view class="record-header">
                <view class="goods-name">{{item.goods}}</view>
                <view class="express-number">{{item.express_number}}</view>
              </view>
              <view class="logistics-timeline">
                <view 
                  wx:for="{{item.logistics}}" 
                  wx:for-item="logItem"
                  wx:key="time"
                  class="timeline-item"
                >
                  <view class="timeline-dot"></view>
                  <view class="timeline-content">
                    <view class="timeline-desc">{{logItem.desc}}</view>
                    <view class="timeline-time">{{logItem.time}}</view>
                  </view>
                </view>
              </view>
            </view>

            <!-- 返佣记录类型 -->
            <view wx:if="{{item.service_type === '返佣记录'}}" class="commission-record">
              <view class="record-header">
                <view class="commission-desc">{{item.desc}}</view>
                <view class="commission-amount">+¥{{item.amount}}</view>
              </view>
              <view class="record-footer">
                <view class="record-time">{{item.date}}</view>
                <view class="record-status">{{item.status}}</view>
              </view>
            </view>

          </view>
        </view>

        <!-- 空状态提示 -->
        <view wx:if="{{filteredServiceList.length === 0}}" class="empty-state">
          <image class="empty-icon" src="/assets/icons/empty.png"></image>
          <view class="empty-text">暂无相关记录</view>
        </view>

        <!-- 底部空白区域 -->
        <view class="scroll-bottom-padding"></view>

      </scroll-view>
    </view>

  </view>
</view>

<!-- 下单成功弹窗 -->
<view class="modal {{showOrderModal ? 'show' : ''}}" catchtap="hideOrderModal">
  <view class="modal-content" catchtap="">
    <view class="modal-title">下单成功</view>
    <view class="modal-message">您的穿线订单已提交，请前往"我的服务-穿线进度"查看详情</view>
    <view class="modal-buttons">
      <button class="btn-cancel" bindtap="hideOrderModal">稍后查看</button>
      <button class="btn-confirm" bindtap="goToMyService">立即查看</button>
    </view>
  </view>
</view>

<!-- 提现弹窗 -->
<view class="modal {{withdrawData.show_withdraw_modal ? 'show' : ''}}" catchtap="hideWithdrawModal">
  <view class="modal-content withdraw-modal" catchtap="">
    <view class="modal-title">余额提现</view>
    <view class="withdraw-balance">
      <view class="balance-label">可提现余额</view>
      <view class="balance-value">¥{{promotionData.account_balance || 0}}</view>
    </view>
    <view class="withdraw-input-section">
      <view class="input-label">提现金额</view>
      <input 
        class="withdraw-input"
        type="digit"
        placeholder="请输入提现金额"
        value="{{withdrawData.withdraw_amount}}"
        bindinput="onWithdrawAmountInput"
      />
      <view class="withdraw-tip">最低提现金额{{withdrawData.min_withdraw_amount}}元，免手续费</view>
    </view>
    <view class="modal-buttons">
      <button class="btn-cancel" bindtap="hideWithdrawModal">取消</button>
      <button 
        class="btn-confirm {{withdrawData.withdraw_amount >= withdrawData.min_withdraw_amount ? 'active' : 'disabled'}}"
        disabled="{{withdrawData.withdraw_amount < withdrawData.min_withdraw_amount}}"
        bindtap="confirmWithdraw"
      >
        确认提现
      </button>
    </view>
  </view>
</view>

<!-- 加载中提示 -->
<view wx:if="{{loading}}" class="loading-mask">
  <view class="loading-container">
    <view class="loading-spinner"></view>
    <view class="loading-text">加载中...</view>
  </view>
</view> 
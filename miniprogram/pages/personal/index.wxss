/* 页面容器 */
.page-container {
  padding-bottom: 0;
  background-color: #F5F5F5;
  min-height: 100vh;
  width: 100%;
  max-width: 100vw; /* 限制最大宽度 */
  overflow-x: hidden; /* 防止横向滚动 */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 头部区域（蓝色背景） */
.header-wrapper {
  background-color: #4F6AED; /* 蓝紫色主色调 */
  width: 100%;
  padding: 30rpx 30rpx 40rpx; /* 减少左右内边距 */
  position: relative;
  border-radius: 0 0 20rpx 20rpx;
  padding-top: 90rpx; /* 为状态栏预留空间 */
  box-shadow: 0 4rpx 12rpx rgba(79, 106, 237, 0.2);
}

/* 自定义导航栏 */
.custom-nav {
  height: 88rpx; /* 44px */
  width: 100%;
  display: flex;
  justify-content: flex-end; /* 设置图标靠右对齐 */
  align-items: center;
  padding: 0 16rpx;
  box-sizing: border-box;
  color: #ffffff;
}

.nav-placeholder {
  flex: 1;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  color: #FFFFFF;
}

.nav-icon {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon .iconfont {
  font-size: 40rpx;
  color: #ffffff;
}

/* 设置图标 */
.settings-icon {
  position: absolute;
  top: 90rpx;
  right: 24rpx; /* 调整右侧位置 */
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  padding: 10rpx;
}

.settings-icon .icon-image {
  width: 40rpx;
  height: 40rpx;
}

/* 用户信息卡片 */
.profile-card {
  padding: 20rpx 0; 
  display: flex;
  align-items: flex-start;
  position: relative;
  width: 100%;
}

.avatar {
  width: 100rpx; /* 略微减小头像尺寸 */
  height: 100rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  background-color: #ffffff;
  flex-shrink: 0;
}

.user-info {
  margin-left: 20rpx; /* 减少间距 */
  flex: 1;
  display: flex;
  flex-direction: column;
  max-width: calc(100% - 120rpx); /* 确保用户信息不会超出容器 */
}

.user-name {
  font-size: 34rpx; /* 略微减小字体 */
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 6rpx;
  text-overflow: ellipsis; /* 文本过长时显示省略号 */
  white-space: nowrap;
  overflow: hidden;
}

/* 会员信息行 */
.member-info {
  display: flex;
  align-items: center;
  margin-bottom: 14rpx;
}

.user-level {
  font-size: 22rpx;
  color: #ffffff;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  margin-right: 16rpx;
}

.user-id {
  font-size: 22rpx;
  color: #ffffff;
  opacity: 0.8;
}

.id-number {
  font-weight: 500;
}

/* 积分信息区域 */
.points-info {
  display: flex;
  flex-direction: column;
  margin-top: 8rpx; /* 调整间距 */
  width: 100%;
}

.points-progress-info {
  display: flex;
  flex-direction: column;
}

.user-points {
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
  line-height: 40rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.next-level {
  font-size: 22rpx;
  color: #ffffff;
  opacity: 0.85;
  line-height: 30rpx;
  margin-top: 4rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

/* 积分进度条 */
.points-progress-bar {
  height: 8rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
  margin: 8rpx 0;
  width: 100%;
  overflow: hidden;
}

.points-progress-filled {
  height: 100%;
  background: linear-gradient(90deg, #FFCD3C, #FF9500); /* 金色渐变 */
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.points-progress-text {
  font-size: 22rpx;
  color: #ffffff;
  opacity: 0.9;
  font-weight: 500;
  text-align: right;
  font-family: 'DIN Alternate', sans-serif; /* 特殊数字字体 */
}

/* 渐变过渡遮罩 */
.header-fade {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 24rpx;
  background: linear-gradient(to bottom, rgba(102,123,255,0.9), rgba(102,123,255,0));
}

/* 积分/优惠券/服务悬浮卡片 */
.stats-panel {
  margin: 0 20rpx; /* 减少左右边距 */
  margin-top: -24rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 10rpx; /* 减少内边距 */
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  position: relative;
  z-index: 10;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  text-align: center;
  padding: 0 5rpx; /* 添加少量内边距 */
}

.divider {
  width: 2rpx;
  height: 70rpx; /* 调整高度 */
  background-color: #EEEEEE;
}

.stats-icon {
  width: 50rpx; /* 减小图标容器 */
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 8rpx;
}

.icon-image {
  width: 30rpx; /* 减小图标 */
  height: 30rpx;
}

.gift-bg {
  background-color: #E6F0FF;
}

.coupon-bg {
  background-color: #FFE6E6;
}

.service-bg {
  background-color: #E6FFE6;
}

.stats-value {
  font-size: 32rpx; /* 略微减小字体 */
  font-weight: 600;
  color: #333333;
  margin-top: 4rpx;
  font-family: 'DIN Alternate', sans-serif;
}

.stats-label {
  font-size: 22rpx; /* 略微减小字体 */
  color: #666666;
}

.stats-value.highlight {
  color: #4F6AED;
}

/* 内容主体区域 */
.content-wrapper {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  padding: 24rpx; /* 减少内边距 */
  margin-top: 16rpx;
}

/* 订单状态面板 */
.order-status-panel {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 24rpx; /* 减少内边距 */
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
  margin-bottom: 24rpx;
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.order-all {
  font-size: 24rpx;
  color: #999999;
  display: flex;
  align-items: center;
}

.arrow-right {
  margin-left: 4rpx;
  font-size: 24rpx;
}

/* 订单项目容器 */
.order-items {
  display: flex;
  justify-content: space-between;
}

.order-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  position: relative;
  padding: 0 4rpx; /* 确保间距合适 */
  box-sizing: border-box;
}

.order-icon {
  width: 56rpx; /* 调整大小 */
  height: 56rpx;
  border-radius: 50%;
  background-color: rgba(102, 123, 255, 0.05);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 8rpx; /* 减少间距 */
  position: relative;
}

.order-icon-image {
  width: 36rpx;
  height: 36rpx;
}

/* 未读徽标 */
.badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  min-width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  background-color: #FF6B6B;
  color: white;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 6rpx;
  font-weight: 500;
  box-sizing: border-box;
}

.order-label {
  font-size: 24rpx; /* 12px */
  color: #333333;
}

/* 每日任务区域 */
.daily-tasks-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

.task-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.task-left {
  display: flex;
  align-items: center;
  max-width: 70%;
}

.task-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(102, 123, 255, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.task-info {
  display: flex;
  flex-direction: column;
  max-width: calc(100% - 76rpx);
}

.task-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
  text-overflow: ellipsis; /* 文本过长时显示省略号 */
  white-space: nowrap;
  overflow: hidden;
}

.task-desc {
  font-size: 24rpx;
  color: #999999;
  text-overflow: ellipsis; /* 文本过长时显示省略号 */
  white-space: nowrap;
  overflow: hidden;
}

.task-btn {
  padding: 10rpx 24rpx;
  background-color: #4F6AED;
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 24rpx;
  flex-shrink: 0;
}

/* 确保任务按钮状态正常 */
.task-btn.checked {
  background-color: #57D289; /* 绿色 */
}

/* 底部Tabbar */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx; /* 50px */
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 20%;
  height: 100%;
}

.tab-icon {
  margin-bottom: 6rpx;
}

.tab-icon .iconfont {
  font-size: 44rpx; /* 22px */
  color: #999999;
}

.tab-label {
  font-size: 22rpx; /* 11px */
  color: #999999;
}

.tab-item.active .tab-icon .iconfont {
  color: #667BFF;
}

.tab-item.active .tab-label {
  color: #667BFF;
}


/* 添加下拉刷新的样式 */
.refresh-container {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;
}

.refresh-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #4F6AED;
  margin: 0 8rpx;
  animation: refresh-animation 1.4s infinite ease-in-out both;
}

.refresh-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.refresh-dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes refresh-animation {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* 常用工具区域 */
.common-tools-section {
  margin: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.tools-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 20rpx;
}

.tool-item {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.tool-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #F7F8FD;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 12rpx;
}

.tool-icon image {
  width: 40rpx;
  height: 40rpx;
}

.tool-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
} 
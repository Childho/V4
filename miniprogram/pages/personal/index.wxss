/* 页面容器 */
.page-container {
  padding-bottom: 0;
  background-color: #F5F5F5;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 头部区域（紫色背景） */
.header-wrapper {
  background-color: #4F6AED; /* 蓝紫色主色调 */
  width: 100%;
  padding: 20rpx 32rpx 48rpx; /* 调整内边距 */
  position: relative;
  border-radius: 0 0 32rpx 32rpx; /* 增加圆角 */
  padding-top: 90rpx; /* 为状态栏预留空间 */
  box-shadow: 0 4rpx 12rpx rgba(79, 106, 237, 0.2); /* 添加阴影 */
}

/* 自定义导航栏 */
.custom-nav {
  height: 88rpx; /* 44px */
  width: 100%;
  display: flex;
  justify-content: flex-end; /* 设置图标靠右对齐 */
  align-items: center;
  padding: 0 16rpx;
  box-sizing: border-box;
  color: #ffffff;
}

.nav-placeholder {
  flex: 1;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  color: #FFFFFF;
}

.nav-icon {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon .iconfont {
  font-size: 40rpx;
  color: #ffffff;
}

/* 设置图标 */
.settings-icon {
  position: absolute;
  top: 100rpx;
  right: 32rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  padding: 10rpx; /* 增加内边距 */
  backdrop-filter: blur(2px); /* 毛玻璃效果 */
}

.settings-icon .icon-image {
  width: 40rpx;
  height: 40rpx;
}

/* 用户信息卡片 */
.profile-card {
  padding: 20rpx 10rpx;
  display: flex;
  align-items: flex-start;
  position: relative;
}

.avatar {
  width: 120rpx; /* 增大头像尺寸 */
  height: 120rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.8); /* 增加边框 */
  background-color: #ffffff;
  flex-shrink: 0;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1); /* 添加阴影 */
}

.user-info {
  margin-left: 28rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.user-name {
  font-size: 40rpx; /* 20px */
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx; /* 增加字间距 */
}

/* 会员信息行 */
.member-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-level {
  font-size: 24rpx; /* 12px */
  color: #ffffff;
  opacity: 0.95;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.15)); /* 渐变背景 */
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
  font-weight: 500;
}

.user-id {
  font-size: 24rpx; /* 12px */
  color: #ffffff;
  opacity: 0.8;
}

.id-number {
  font-weight: 600;
  font-family: 'DIN Alternate', sans-serif; /* 特殊数字字体 */
  font-size: 26rpx;
  letter-spacing: 1rpx;
}

/* 积分信息区域 */
.points-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-top: 6rpx;
}

.points-progress-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.user-points {
  font-size: 32rpx; /* 16px */
  font-weight: 600;
  color: #ffffff;
  line-height: 40rpx;
}

.next-level {
  font-size: 24rpx; /* 12px */
  color: #ffffff;
  font-weight: 300;
  opacity: 0.85;
  line-height: 32rpx;
}

/* 积分进度条 */
.points-progress-bar {
  height: 8rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
  margin: 8rpx 0;
  width: 100%;
  overflow: hidden;
}

.points-progress-filled {
  height: 100%;
  background: linear-gradient(90deg, #FFCD3C, #FF9500); /* 金色渐变 */
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.points-progress-text {
  font-size: 22rpx;
  color: #ffffff;
  opacity: 0.9;
  font-weight: 500;
  text-align: right;
  font-family: 'DIN Alternate', sans-serif; /* 特殊数字字体 */
}

/* 渐变过渡遮罩 */
.header-fade {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 24rpx;
  background: linear-gradient(to bottom, rgba(102,123,255,0.9), rgba(102,123,255,0));
}

/* 积分/优惠券/服务悬浮卡片 */
.stats-panel {
  margin: 0 32rpx;
  margin-top: -32rpx; /* 调整白卡片悬浮高度 */
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx 0; /* 增加内边距 */
  display: flex;
  justify-content: space-between;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.08); /* 增强阴影 */
  position: relative;
  z-index: 10;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  text-align: center;
}

.stats-icon {
  width: 72rpx; /* 增大图标容器 */
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 16rpx;
  transition: transform 0.2s; /* 添加过渡效果 */
}

.stats-icon:active {
  transform: scale(0.95); /* 点击动效 */
}

.icon-image {
  width: 40rpx; /* 增大图标 */
  height: 40rpx;
}

.gift-bg {
  background-color: #E6F0FF;
}

.gift-bg .icon-image {
  color: #3366FF;
}

.coupon-bg {
  background-color: #FFE6E6;
}

.coupon-bg .icon-image {
  color: #FF6666;
}

.service-bg {
  background-color: #E6FFE6;
}

.service-bg .icon-image {
  color: #33CC33;
}

.stats-value {
  font-size: 40rpx; /* 增大数字 */
  font-weight: 600;
  color: #333333;
  margin-bottom: 6rpx;
  font-family: 'DIN Alternate', sans-serif; /* 特殊数字字体 */
}

.stats-label {
  font-size: 26rpx; /* 增大标签文字 */
  color: #666666;
}

.stats-value.highlight {
  color: #4F6AED;
}

/* 内容主体区域 */
.content-wrapper {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  padding: 32rpx;
  margin-top: 16rpx;
}

/* 订单状态面板 */
.order-status-panel {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
  margin-bottom: 32rpx;
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.order-all {
  font-size: 24rpx;
  color: #999999;
  display: flex;
  align-items: center;
}

.arrow-right {
  margin-left: 4rpx;
  font-size: 24rpx;
}

/* 订单项目容器 */
.order-items {
  display: flex;
  justify-content: space-between;
}

.order-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  position: relative;
}

.order-icon {
  width: 72rpx; /* 增大图标容器 */
  height: 72rpx;
  border-radius: 50%;
  background-color: rgba(102, 123, 255, 0.05);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 12rpx;
  position: relative;
}

.order-icon .iconfont {
  font-size: 36rpx;
  color: #4F6AED;
}

/* 未读徽标 */
.badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background-color: #FF6B6B;
  color: white;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 6rpx;
  font-weight: bold;
  box-sizing: border-box;
}

.order-label {
  font-size: 24rpx; /* 12px */
  color: #333333;
}

/* 每日任务区域 */
.daily-tasks-section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx; /* 16px */
  font-weight: bold;
  color: #333333;
}

.more-btn {
  font-size: 24rpx; /* 12px */
  color: #4F6AED;
  display: flex;
  align-items: center;
}

.more-btn:after {
  content: ">";
  margin-left: 4rpx;
}

.task-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
}

.task-item:not(:last-child) {
  border-bottom: 1rpx solid #f5f5f5;
}

.task-left {
  display: flex;
  align-items: center;
}

.task-icon {
  width: 72rpx; /* 增大图标 */
  height: 72rpx;
  border-radius: 50%;
  background-color: rgba(102, 123, 255, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.task-icon .iconfont {
  font-size: 36rpx;
  color: #4F6AED;
}

.task-info {
  display: flex;
  flex-direction: column;
}

.task-name {
  font-size: 28rpx; /* 14px */
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.task-desc {
  font-size: 24rpx; /* 12px */
  color: #999999;
}

.task-btn {
  padding: 12rpx 30rpx; /* 增大按钮 */
  background-color: #4F6AED;
  color: #ffffff;
  font-size: 26rpx; /* 增大字体 */
  border-radius: 30rpx;
  transition: all 0.2s;
}

.task-btn:active {
  transform: scale(0.95); /* 按钮点击效果 */
  opacity: 0.9;
}

.task-btn.checked {
  background-color: #57D289; /* 绿色 */
}

/* 底部Tabbar */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx; /* 50px */
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 20%;
  height: 100%;
}

.tab-icon {
  margin-bottom: 6rpx;
}

.tab-icon .iconfont {
  font-size: 44rpx; /* 22px */
  color: #999999;
}

.tab-label {
  font-size: 22rpx; /* 11px */
  color: #999999;
}

.tab-item.active .tab-icon .iconfont {
  color: #667BFF;
}

.tab-item.active .tab-label {
  color: #667BFF;
}


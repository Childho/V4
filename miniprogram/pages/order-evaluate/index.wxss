/* 评价页面样式 - 现代化简洁设计 */

.evaluate-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  pointer-events: none;
}

/* 遮罩层 */
.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0);
  transition: background 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  pointer-events: none;
}

.mask.show {
  background: rgba(0, 0, 0, 0.5);
  pointer-events: auto;
}

/* 弹窗主体 */
.evaluate-popup {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  max-height: 90vh; /* 增加最大高度 */
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
  pointer-events: none;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}

.evaluate-popup.show {
  transform: translateY(0);
  pointer-events: auto;
}

/* 顶部标题栏 */
.popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  flex-shrink: 0; /* 防止标题栏被压缩 */
  background: #fff;
  z-index: 10;
}

.header-left,
.header-right {
  width: 120rpx;
}

.header-right {
  text-align: right;
}

.close-btn {
  background: none;
  border: none;
  padding: 8rpx;
  margin: 0;
  font-size: 32rpx;
  color: #999;
  line-height: 1;
}

.close-btn::after {
  border: none;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
}

.submit-btn {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  color: #fff;
  border: none;
  border-radius: 40rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1;
  margin: 0;
}

.submit-btn::after {
  border: none;
}

.submit-btn[disabled] {
  background: #e0e0e0;
  color: #999;
}

/* 商品信息 */
.product-info {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #fafafa;
  margin: 0 32rpx 24rpx;
  border-radius: 16rpx;
  flex-shrink: 0; /* 防止商品信息被压缩 */
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.product-details {
  flex: 1;
}

.product-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  line-height: 1.3;
}

/* 滚动内容区域 */
.scroll-content {
  flex: 1; /* 占用剩余空间 */
  padding: 0 32rpx 32rpx;
  box-sizing: border-box;
  overflow-y: auto; /* 确保可以滚动 */
}

/* 通用区块样式 */
.rating-section,
.tags-section,
.text-section,
.media-section,
.settings-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.optional {
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
}

/* 星级评价 */
.rating-container {
  text-align: center;
  padding: 32rpx 0;
}

.stars {
  display: flex;
  justify-content: center;
  margin-bottom: 16rpx;
}

.star {
  margin: 0 8rpx;
  cursor: pointer;
  transition: transform 0.2s ease;
}

.star:active {
  transform: scale(1.2);
}

.star-icon {
  font-size: 64rpx;
  color: #e0e0e0;
  transition: color 0.3s ease;
}

.star.active .star-icon {
  color: #FFD700;
}

.rating-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 16rpx;
}

/* 标签选择 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.tag-item.selected {
  background: #FFF3F0;
  color: #FF6B35;
  border-color: #FF6B35;
}

/* 文字评价 */
.text-input {
  width: 100%;
  min-height: 120rpx;
  padding: 24rpx;
  background: #fafafa;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  transition: border-color 0.3s ease;
  box-sizing: border-box;
}

.text-input:focus {
  border-color: #FF6B35;
  background: #fff;
}

.text-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 媒体上传 */
.media-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.media-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.media-preview,
.video-preview {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  position: relative;
}

.video-preview {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

.video-thumb {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.video-play-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
}

.media-delete {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #ff4757;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.delete-icon {
  color: #fff;
  font-size: 20rpx;
  line-height: 1;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #d0d0d0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
  transition: all 0.3s ease;
}

.upload-btn:active {
  background: #f0f0f0;
  border-color: #FF6B35;
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.media-tip {
  width: 100%;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
  line-height: 1.4;
}

/* 设置选项 */
.settings-section {
  margin-bottom: 32rpx; /* 调整底部间距 */
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 0; /* 增加垂直内边距 */
  border-bottom: 1rpx solid #f5f5f5;
  min-height: 88rpx; /* 增加最小高度 */
}

.setting-item:last-child {
  border-bottom: none;
  padding-bottom: 36rpx; /* 保持一致的内边距 */
}

.setting-label {
  display: flex;
  align-items: center;
  flex: 1;
  padding-right: 24rpx; /* 增加右侧间距 */
}

.setting-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  width: 32rpx;
  text-align: center;
}

.setting-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-right: 16rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
  line-height: 1.3;
  max-width: 200rpx; /* 限制描述文字宽度 */
}

.setting-switch {
  transform: scale(0.8);
  flex-shrink: 0; /* 防止开关被压缩 */
}

/* 底部安全区域 - 确保内容不被遮挡 */
.bottom-space {
  height: 200rpx; /* 增加底部安全区域高度 */
  flex-shrink: 0;
}

/* 动画优化 */
.evaluate-popup {
  -webkit-tap-highlight-color: transparent;
} 
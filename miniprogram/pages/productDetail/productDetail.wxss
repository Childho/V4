.product-detail {
  padding: 20rpx;
}

.product-header {
  padding: 20rpx 0;
}

.product-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.product-content {
  margin-top: 20rpx;
}

.product-info {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.price-info {
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.price-label {
  color: #666;
  margin-right: 10rpx;
}

.price {
  color: #ff4d4f;
  font-size: 36rpx;
  font-weight: bold;
}

.action-buttons {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.buy-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #3e7fff;
  color: #fff;
  border-radius: 44rpx;
} 
.product-detail-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 120rpx;
}

.product-swiper {
  width: 100%;
  height: 750rpx;
  margin-top: 88rpx;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-info {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.product-price {
  font-size: 48rpx;
  font-weight: 500;
  color: #ff5000;
  margin-bottom: 16rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.product-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.product-meta {
  display: flex;
  font-size: 24rpx;
  color: #999;
}

.product-brand {
  margin-right: 48rpx;
}

.product-specs, .product-detail, .related-products {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  width: 8rpx;
  height: 32rpx;
  background: #3e7fff;
  border-radius: 4rpx;
}

.specs-list {
  display: flex;
  flex-direction: column;
}

.specs-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.specs-item:last-child {
  border-bottom: none;
}

.specs-label {
  width: 180rpx;
  color: #999;
  font-size: 28rpx;
}

.specs-value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
}

.detail-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.related-scroll {
  width: 100%;
  white-space: nowrap;
}

.related-list {
  display: flex;
  padding: 16rpx 0;
}

.related-item {
  width: 200rpx;
  margin-right: 24rpx;
  display: inline-block;
}

.related-image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.related-name {
  font-size: 24rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 8rpx;
}

.related-price {
  font-size: 28rpx;
  color: #ff5000;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #f1f1f1;
  z-index: 999;
}

.left-actions {
  display: flex;
  width: 40%;
  height: 100%;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
  position: relative;
}

.action-btn image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.action-btn text {
  font-size: 20rpx;
  color: #666;
}

.badge {
  position: absolute;
  top: 0;
  right: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 16rpx;
  background: #ff5000;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  padding: 0 6rpx;
  box-sizing: border-box;
}

.right-actions {
  display: flex;
  width: 60%;
  height: 100%;
  padding: 16rpx 24rpx;
  box-sizing: border-box;
}

.add-cart-btn, .buy-now-btn {
  flex: 1;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  border-radius: 34rpx;
  font-size: 28rpx;
  margin: 0;
  padding: 0;
}

.add-cart-btn {
  background: #ffe6d2;
  color: #ff5000;
  margin-right: 20rpx;
}

.buy-now-btn {
  background: #ff5000;
  color: #fff;
}

/* 规格弹窗样式 */
.specs-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.popup-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  padding-bottom: 32rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.popup-header {
  display: flex;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.popup-product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.popup-product-info {
  flex: 1;
}

.popup-product-price {
  font-size: 40rpx;
  font-weight: 500;
  color: #ff5000;
  margin-bottom: 12rpx;
}

.popup-product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.popup-selected-specs {
  font-size: 24rpx;
  color: #999;
}

.popup-close {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.popup-specs {
  padding: 0 32rpx;
}

.popup-specs-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.popup-specs-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 24rpx;
}

.popup-specs-options {
  display: flex;
  flex-wrap: wrap;
}

.popup-specs-option {
  min-width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  padding: 0 24rpx;
  font-size: 24rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.popup-specs-option.selected {
  background: #ffeee5;
  color: #ff5000;
  border: 1rpx solid #ff5000;
}

.popup-specs-option.disabled {
  color: #ccc;
  background: #f9f9f9;
}

.popup-quantity {
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.popup-quantity-title {
  font-size: 28rpx;
  color: #333;
}

.popup-quantity-control {
  display: flex;
  align-items: center;
}

.quantity-minus, .quantity-plus {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 36rpx;
  background: #f5f5f5;
}

.quantity-minus {
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
}

.quantity-plus {
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.quantity-minus.disabled {
  color: #ccc;
}

.quantity-input {
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
}

.popup-btns {
  display: flex;
  padding: 32rpx;
}

.popup-add-cart-btn, .popup-buy-now-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin: 0;
}

.popup-add-cart-btn {
  background: #ffe6d2;
  color: #ff5000;
  margin-right: 20rpx;
}

.popup-buy-now-btn {
  background: #ff5000;
  color: #fff;
} 
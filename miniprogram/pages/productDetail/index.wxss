/* 商品详情页面样式 */

/* 页面容器 */
.product-detail-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx; /* 增加底部padding，避免被底部操作栏遮挡 */
}

/* 商品轮播图 */
.product-swiper {
  width: 100%;
  height: 800rpx; /* 修改为800rpx，确保是正方形800x800像素 */
  margin-top: 20rpx; /* 添加适当的顶部间距 */
  background: #fff;
}

.product-image {
  width: 100%;
  height: 100%;
  /* 确保图片显示为正方形，保持宽高比 */
  object-fit: cover;
}

/* 商品基本信息区域 */
.product-info {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

/* 价格区域 */
.price-section {
  display: flex;
  align-items: baseline;
  margin-bottom: 24rpx;
}

.current-price {
  font-size: 56rpx;
  font-weight: 600;
  color: #ff4757;
  margin-right: 16rpx;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
  margin-right: 16rpx;
}

.sales-info {
  font-size: 24rpx;
  color: #999;
  margin-left: auto;
}

/* 商品标题 */
.product-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.product-subtitle {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 24rpx;
}

/* 服务保障标签 */
.service-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 24rpx;
}

.service-tag {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  margin-right: 16rpx;
  margin-bottom: 12rpx;
  background: #f0f8ff;
  border: 1rpx solid #e1f3ff;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #1890ff;
}

.service-tag image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

/* 商品元信息 */
.product-meta {
  border-top: 1rpx solid #f5f5f5;
  padding-top: 24rpx;
}

.brand-info,
.specs-selector {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  font-size: 28rpx;
}

.specs-selector {
  border-top: 1rpx solid #f5f5f5;
  position: relative;
}

.label {
  color: #666;
  margin-right: 16rpx;
  min-width: 120rpx;
}

.value {
  flex: 1;
  color: #333;
}

.arrow-right {
  width: 24rpx;
  height: 24rpx;
  margin-left: 16rpx;
}

/* 评论区域 */
.comments-section {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  width: 8rpx;
  height: 32rpx;
  background: #ff4757;
  border-radius: 4rpx;
}

.view-all {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.view-all image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 8rpx;
}

/* 评价概览 */
.comment-overview {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #fafafa;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.rating-score {
  display: flex;
  align-items: center;
}

.score {
  font-size: 48rpx;
  font-weight: 600;
  color: #ff4757;
  margin-right: 16rpx;
}

.stars {
  display: flex;
}

.stars image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

.rating-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  padding: 6rpx 12rpx;
  margin-left: 8rpx;
  background: #fff;
  border: 1rpx solid #e8e8e8;
  border-radius: 16rpx;
  font-size: 20rpx;
  color: #666;
}

/* 评论列表预览 */
.comment-preview {
  margin-top: 24rpx;
}

.comment-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.comment-rating {
  display: flex;
}

.comment-rating image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 2rpx;
}

.comment-date {
  font-size: 24rpx;
  color: #999;
}

.comment-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.comment-images {
  display: flex;
}

.comment-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

/* 无评论提示 */
.no-comments {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
}

.no-comments image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.no-comments text {
  font-size: 28rpx;
}

/* 规格参数 */
.product-specs {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.specs-list {
  display: flex;
  flex-direction: column;
}

.specs-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.specs-item:last-child {
  border-bottom: none;
}

.specs-label {
  width: 180rpx;
  color: #666;
  font-size: 28rpx;
}

.specs-value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
}

/* 相关推荐 */
.related-products {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.related-scroll {
  width: 100%;
  white-space: nowrap;
}

.related-list {
  display: flex;
  padding: 16rpx 0;
}

.related-item {
  width: 200rpx;
  margin-right: 24rpx;
  display: inline-block;
}

.related-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.related-name {
  font-size: 24rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 8rpx;
}

.related-price {
  font-size: 28rpx;
  font-weight: 500;
  color: #ff4757;
}

/* 商品详情图文 */
.product-detail {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.detail-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* 底部操作栏 - 优化定位和安全区域 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 140rpx; /* 增加高度，给按钮更多垂直空间，解决紧贴问题 */
  background: #fff;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #f1f1f1;
  z-index: 999;
  box-shadow: 0 -2rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 24rpx 0; /* 调整上下内边距，留出额外空间 */
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom)); /* 适配iPhone底部安全区域 */
  box-sizing: border-box;
}

.left-actions {
  display: flex;
  width: 30%; /* 减少左侧宽度，只保留客服和购物车 */
  height: 100%;
  align-items: center; /* 确保垂直居中 */
  padding-left: 16rpx; /* 添加左边距 */
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 80rpx; /* 设置固定高度 */
  position: relative;
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  font-size: 20rpx;
}

.action-btn::after {
  border: none;
}

.action-btn image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx; /* 减小间距 */
}

.action-btn text {
  font-size: 20rpx;
  color: #666;
}

/* 购物车按钮特殊样式 */
.cart-btn {
  position: relative;
}

.cart-btn text {
  color: #333; /* 购物车文字颜色深一些 */
  font-weight: 500;
}

/* 购物车徽章样式 */
.cart-badge {
  position: absolute;
  top: -4rpx; /* 调整位置到图标右上角 */
  right: 16rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 16rpx;
  background: #ff4757;
  color: #fff;
  font-size: 18rpx;
  text-align: center;
  padding: 0 6rpx;
  box-sizing: border-box;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.3);
}

.right-actions {
  display: flex;
  width: 70%; /* 增加右侧宽度，让按钮更宽 */
  height: 100%;
  padding: 0 24rpx; /* 调整内边距 */
  box-sizing: border-box;
  align-items: center; /* 确保垂直居中 */
}

.add-cart-btn,
.buy-now-btn {
  height: 72rpx; /* 增加按钮高度 */
  line-height: 72rpx;
  text-align: center;
  border-radius: 36rpx;
  font-size: 30rpx; /* 增大字体 */
  font-weight: 600; /* 加粗字体 */
  margin: 0;
  padding: 0;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease; /* 添加过渡效果 */
}

.add-cart-btn::after,
.buy-now-btn::after {
  border: none;
}

.add-cart-btn {
  flex: 1.2; /* 加入购物车按钮稍宽一些 */
  background: #fff;
  color: #ff4757;
  border: 2rpx solid #ff4757;
  margin-right: 16rpx;
}

.add-cart-btn image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.buy-now-btn {
  flex: 1;
  background: linear-gradient(135deg, #ff4757, #ff3838); /* 渐变背景 */
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(255, 71, 87, 0.3); /* 添加阴影 */
}

/* 按钮按下效果 */
.add-cart-btn:active {
  background: #fff2e8;
  transform: scale(0.98);
}

.buy-now-btn:active {
  background: linear-gradient(135deg, #ff3838, #ff2727);
  transform: scale(0.98);
}

/* 规格弹窗样式 */
.specs-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.popup-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom)); /* 适配安全区域 */
  max-height: 80vh;
  overflow-y: auto;
}

.popup-header {
  display: flex;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.popup-product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.popup-product-info {
  flex: 1;
}

.popup-product-price {
  font-size: 48rpx;
  font-weight: 600;
  color: #ff4757;
  margin-bottom: 12rpx;
}

.popup-product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.popup-selected-specs {
  font-size: 24rpx;
  color: #999;
}

.popup-close {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 40rpx;
  color: #999;
  background: #f5f5f5;
  border-radius: 50%;
}

.popup-specs {
  padding: 0 32rpx;
}

.popup-specs-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.popup-specs-item:last-child {
  border-bottom: none;
}

.popup-specs-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 24rpx;
}

.popup-specs-options {
  display: flex;
  flex-wrap: wrap;
}

.popup-specs-option {
  min-width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  padding: 0 24rpx;
  font-size: 24rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid transparent;
  transition: all 0.3s ease;
}

.popup-specs-option.selected {
  background: #fff2e8;
  color: #ff4757;
  border: 1rpx solid #ff4757;
}

.popup-specs-option.disabled {
  color: #ccc;
  background: #f9f9f9;
}

.popup-quantity {
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.popup-quantity-title {
  font-size: 28rpx;
  color: #333;
}

.popup-quantity-control {
  display: flex;
  align-items: center;
}

.quantity-minus,
.quantity-plus {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 36rpx;
  background: #f5f5f5;
  color: #333;
  border: 1rpx solid #e8e8e8;
}

.quantity-minus {
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  border-right: none;
}

.quantity-plus {
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  border-left: none;
}

.quantity-minus.disabled {
  color: #ccc;
  background: #f9f9f9;
}

.quantity-input {
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
  border: 1rpx solid #e8e8e8;
  border-left: none;
  border-right: none;
}

.popup-btns {
  display: flex;
  padding: 32rpx;
}

.popup-add-cart-btn,
.popup-buy-now-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin: 0;
  border: none;
}

.popup-add-cart-btn::after,
.popup-buy-now-btn::after {
  border: none;
}

.popup-add-cart-btn {
  background: #fff2e8;
  color: #ff4757;
  border: 1rpx solid #ff4757;
  margin-right: 20rpx;
}

.popup-buy-now-btn {
  background: #ff4757;
  color: #fff;
}

/* 加载状态 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-content image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 24rpx;
}

.loading-content text {
  font-size: 28rpx;
  color: #666;
}

/* 响应式优化 */
@media (max-width: 350px) {
  .current-price {
    font-size: 48rpx;
  }
  
  .popup-product-price {
    font-size: 40rpx;
  }
}

/* 动画效果 */
.specs-popup {
  animation: fadeIn 0.3s ease;
}

.popup-content {
  animation: slideUp 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
} 
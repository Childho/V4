/* 底部操作栏 - 优化定位和安全区域 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 140rpx; /* 增加高度，给按钮更多垂直空间，解决紧贴问题 */
  background: #fff;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #f1f1f1;
  z-index: 999;
  box-shadow: 0 -2rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 24rpx 0; /* 调整上下内边距，留出额外空间 */
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom)); /* 适配iPhone底部安全区域 */
  box-sizing: border-box;
}

.left-actions {
  display: flex;
  width: 30%; /* 减少左侧宽度，只保留客服和购物车 */
  height: 100%;
  align-items: center; /* 确保垂直居中 */
  padding-left: 16rpx; /* 添加左边距 */
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 80rpx; /* 设置固定高度 */
  position: relative;
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  font-size: 20rpx;
}

.action-btn::after {
  border: none;
}

.action-btn .action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx; /* 减小间距 */
}

.action-btn .action-text {
  font-size: 20rpx;
  color: #666;
}

/* 购物车按钮特殊样式 */
.cart-btn {
  position: relative;
}

.cart-btn .action-text {
  color: #333; /* 购物车文字颜色深一些 */
  font-weight: 500;
}

/* 购物车徽章样式 */
.cart-badge {
  position: absolute;
  top: -4rpx; /* 调整位置到图标右上角 */
  right: 16rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 16rpx;
  background: #ff4757;
  color: #fff;
  font-size: 18rpx;
  text-align: center;
  padding: 0 6rpx;
  box-sizing: border-box;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.3);
}

.right-actions {
  display: flex;
  width: 70%; /* 增加右侧宽度，让按钮更宽 */
  height: 100%;
  padding: 0 24rpx; /* 调整内边距 */
  box-sizing: border-box;
  align-items: center; /* 确保垂直居中 */
}

.add-cart-btn,
.buy-now-btn {
  height: 72rpx; /* 增加按钮高度 */
  text-align: center;
  border-radius: 36rpx;
  font-size: 30rpx; /* 增大字体 */
  font-weight: 600; /* 加粗字体 */
  margin: 0;
  padding: 0;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  box-sizing: border-box;
  transition: all 0.3s ease; /* 添加过渡效果 */
}

.add-cart-btn::after,
.buy-now-btn::after {
  border: none;
}

.add-cart-btn {
  flex: 1.2; /* 加入购物车按钮稍宽一些 */
  background: #fff;
  color: #ff4757;
  border: 2rpx solid #ff4757;
  margin-right: 16rpx;
}

.add-cart-btn .cart-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.buy-now-btn {
  flex: 1;
  background: linear-gradient(135deg, #ff4757, #ff3838); /* 渐变背景 */
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(255, 71, 87, 0.3); /* 添加阴影 */
}

/* 按钮按下效果 */
.add-cart-btn:active {
  background: #fff2e8;
  transform: scale(0.98);
}

.buy-now-btn:active {
  background: linear-gradient(135deg, #ff3838, #ff2727);
  transform: scale(0.98);
}


.activity-container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为底部导航栏和悬浮按钮留出空间 */
  /* 参考商场页面，只使用安全区域适配 */
  padding-top: env(safe-area-inset-top);
  box-sizing: border-box;
}

/* 隐藏微信开发者工具的调试信息显示 */
.vconsole-panel,
.vconsole-switch,
.vconsole-mask,
[class*="vconsole"],
[id*="vconsole"],
[class*="debug"],
[id*="debug"] {
  display: none !important;
  visibility: hidden !important;
  opacity: 0 !important;
  position: absolute !important;
  left: -9999px !important;
  top: -9999px !important;
  width: 0 !important;
  height: 0 !important;
}

/* 自定义顶部导航栏样式 - 参考商场页面 */
.custom-nav-bar {
  background-color: #ffffff;
  padding: 80rpx 0 18rpx 0; /* 减少底部padding，让标题和搜索栏更紧凑 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.nav-title {
  text-align: center; /* 标题居中 */
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  padding: 24rpx 0 14rpx 0; /* 增加顶部内边距，让标题下移一点 */
  line-height: 1.2;
}

.nav-actions {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  /* 预留右侧功能按钮区域 */
}

/* 固定搜索栏样式 - 参考商场页面 */
.fixed-search-section {
  background-color: #ffffff;
  padding: 16rpx 24rpx; /* 搜索栏内边距 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.content-scroll {
  height: calc(100vh - env(safe-area-inset-top) - 140rpx); /* 动态计算高度 */
  box-sizing: border-box;
}

/* 搜索栏样式 - 与商场页面保持一致 */
.search-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 24rpx;
  padding: 16rpx 20rpx;
  border: 2rpx solid #e5e5e5;
}

.search-input-wrapper:focus-within {
  border-color: #4169e1; /* 聚焦时的边框颜色 */
  background-color: #ffffff;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  background-color: transparent;
}

.search-input::placeholder {
  color: #999999;
}

.search-btn {
  background-color: #4169e1;
  color: #ffffff;
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  min-width: 120rpx;
}

.search-btn:active {
  background-color: #3654c4;
}

/* 移除原有的filter-icon样式 */
.filter-icon {
  display: none;
}

/* 筛选标签样式 */
.filter-tabs {
  display: flex;
  background-color: #fff;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
  margin-top: 0; /* 移除上边距，与紫色搜索栏紧密衔接 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05); /* 添加轻微阴影 */
}

.filter-tabs view {
  padding: 24rpx 0;
  margin-right: 40rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.filter-tabs view.active {
  color: #4169e1;
  font-weight: 500;
}

.filter-tabs view.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #4169e1;
  border-radius: 3rpx;
}

/* 活动列表样式 */
.activity-list {
  padding: 0 30rpx;
  height: calc(100vh - 210rpx); /* 微调高度，适配新的搜索栏设计 */
}

.activity-item {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.activity-image {
  width: 100%;
  height: 320rpx;
}

.activity-info {
  padding: 24rpx;
}

.activity-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.activity-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.activity-bottom {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.activity-time {
  font-size: 24rpx;
  color: #999;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
}

.activity-location {
  font-size: 24rpx;
  color: #999;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
}

.location-icon {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
  background-image: url('data:image/svg+xml;base64,');
  background-size: cover;
}

.activity-status {
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  line-height: 1;
}

.activity-status.ongoing {
  background-color: #e6f7ff;
  color: #1890ff;
}

.activity-status.finished {
  background-color: #f5f5f5;
  color: #999999;
}

.activity-btn-row {
  display: flex;
  justify-content: flex-end;
}

.activity-btn {
  background-color: #4169e1;
  color: #fff;
  font-size: 26rpx;
  padding: 0 30rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  margin: 0;
}

.activity-btn.disabled {
  background-color: #f5f5f5;
  color: #999999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #999999;
  font-size: 28rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 16rpx;
  border: 4rpx solid #e6e6e6;
  border-top-color: #4169e1;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-text {
  color: #999999;
  font-size: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 页面底部占位，防止被悬浮按钮遮挡 */
.bottom-placeholder {
  height: 120rpx;
} 
/* 我的订单页面样式 */
.order-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* tab导航栏样式 */
.tab-bar {
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-scroll {
  white-space: nowrap;
}

.tab-list {
  display: flex;
  align-items: center;
  padding: 0 32rpx;
}

.tab-item {
  flex: 1;
  padding: 24rpx 16rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.tab-item.active {
  color: #ff6b35;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #ff6b35;
  border-radius: 2rpx;
}

/* 订单内容区域 */
.order-content {
  padding: 20rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-top: 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #ccc;
}

/* 订单列表样式 */
.order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 单个订单项样式 */
.order-item {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.order-item:active {
  transform: scale(0.98);
}

/* 订单头部样式 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.order-id {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  text-align: center;
}

/* 订单状态颜色 */
.order-status.unpaid {
  color: #ff6b35;
  background-color: #fff2ee;
}

.order-status.shipped {
  color: #1890ff;
  background-color: #e6f7ff;
}

.order-status.shipping {
  color: #52c41a;
  background-color: #f6ffed;
}

.order-status.completed {
  color: #722ed1;
  background-color: #f9f0ff;
}

.order-status.refunding {
  color: #fa8c16;
  background-color: #fff7e6;
}

/* 商品列表样式 */
.goods-list {
  padding: 0 32rpx;
}

.goods-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.goods-item:last-child {
  border-bottom: none;
}

.goods-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  background-color: #f5f5f5;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.goods-spec {
  font-size: 24rpx;
  color: #999;
}

.goods-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: 600;
}

.goods-quantity {
  font-size: 24rpx;
  color: #666;
}

/* 物流信息样式 */
.logistics-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 32rpx;
  background-color: #f8f9fa;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.logistics-text {
  font-size: 24rpx;
  color: #666;
}

.logistics-status {
  font-size: 24rpx;
  color: #52c41a;
  font-weight: 500;
}

/* 订单金额样式 */
.order-amount {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx 32rpx;
  gap: 8rpx;
}

.amount-label {
  font-size: 26rpx;
  color: #666;
}

.amount-value {
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: 600;
}

/* 操作按钮区域样式 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 24rpx 32rpx;
  gap: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  border-radius: 24rpx;
  border: 1rpx solid;
  background-color: transparent;
  transition: all 0.3s ease;
  min-width: 140rpx;
}

/* 按钮类型样式 */
.action-btn.primary {
  color: #fff;
  background-color: #ff6b35;
  border-color: #ff6b35;
}

.action-btn.primary:active {
  background-color: #e55a2b;
}

.action-btn.default {
  color: #666;
  border-color: #d9d9d9;
  background-color: #fff;
}

.action-btn.default:active {
  background-color: #f5f5f5;
}

.action-btn.cancel {
  color: #999;
  border-color: #d9d9d9;
  background-color: #fff;
}

.action-btn.cancel:active {
  background-color: #f5f5f5;
}

.action-btn.delete {
  color: #ff4d4f;
  border-color: #ff4d4f;
  background-color: transparent;
}

.action-btn.delete:active {
  background-color: #fff2f0;
}

/* 加载状态样式 */
.loading, .no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #999;
} 
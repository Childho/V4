/* 退款详情页面样式 */
/* 整体布局采用卡片式设计，清晰展示各个信息区域 */

/* 容器样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为底部按钮留出空间 */
}

/* 通用区域样式 */
.header-section,
.product-section,
.refund-section,
.progress-section {
  margin: 20rpx;
  margin-bottom: 0;
}

/* 区域标题样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

/* ===== 顶部信息区域样式 ===== */
.order-info {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row .label {
  font-size: 28rpx;
  color: #666;
  width: 140rpx;
}

.info-row .value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
}

.copy-btn {
  font-size: 24rpx;
  color: #1890ff;
  padding: 8rpx 16rpx;
  border: 2rpx solid #1890ff;
  border-radius: 8rpx;
  background-color: transparent;
}

.copy-btn:active {
  background-color: rgba(24, 144, 255, 0.1);
}

/* ===== 商品信息区域样式 ===== */
.product-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.product-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.product-spec {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.product-price-qty {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 32rpx;
  color: #ff4757;
  font-weight: bold;
}

.quantity {
  font-size: 26rpx;
  color: #666;
}

/* ===== 退款信息区域样式 ===== */
.refund-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.refund-amount-status {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.amount-row,
.status-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-row:last-child {
  margin-bottom: 0;
}

.amount-row .label,
.status-row .label {
  font-size: 28rpx;
  color: #666;
}

.amount {
  font-size: 36rpx;
  color: #ff4757;
  font-weight: bold;
}

.status {
  font-size: 28rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

/* 不同状态的颜色 */
.status-refunding {
  color: #1890ff;
  background-color: rgba(24, 144, 255, 0.1);
}

.status-completed {
  color: #52c41a;
  background-color: rgba(82, 196, 26, 0.1);
}

.status-rejected {
  color: #ff4757;
  background-color: rgba(255, 71, 87, 0.1);
}

.refund-details {
  /* 退款详细信息样式 */
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-row .label {
  font-size: 28rpx;
  color: #666;
  width: 140rpx;
  flex-shrink: 0;
}

.detail-row .value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
  word-wrap: break-word;
}

/* ===== 退款进度时间线样式 ===== */
.progress-timeline {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.timeline-item {
  display: flex;
  position: relative;
  margin-bottom: 40rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-icon {
  position: relative;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.icon-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 4rpx solid #ddd;
  background-color: #fff;
  position: relative;
  z-index: 2;
}

.icon-line {
  position: absolute;
  top: 28rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 4rpx;
  height: 60rpx;
  background-color: #e0e0e0;
  z-index: 1;
}

.timeline-content {
  flex: 1;
  padding-top: 4rpx;
}

.timeline-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.timeline-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.timeline-time {
  font-size: 24rpx;
  color: #999;
}

/* 不同状态的时间线样式 */
.timeline-completed .icon-dot {
  border-color: #52c41a;
  background-color: #52c41a;
}

.timeline-completed .icon-line {
  background-color: #52c41a;
}

.timeline-completed .timeline-title {
  color: #52c41a;
}

.timeline-current .icon-dot {
  border-color: #1890ff;
  background-color: #1890ff;
  box-shadow: 0 0 0 6rpx rgba(24, 144, 255, 0.2);
}

.timeline-current .timeline-title {
  color: #1890ff;
}

.timeline-rejected .icon-dot {
  border-color: #ff4757;
  background-color: #ff4757;
}

.timeline-rejected .timeline-title {
  color: #ff4757;
}

/* ===== 加载和错误状态样式 ===== */
.loading-container,
.error-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
}

.loading-content,
.error-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f0f0f0;
  border-top: 6rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-message {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.retry-btn {
  background-color: #1890ff;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 8rpx;
  border: none;
}

.retry-btn:active {
  background-color: #096dd9;
}

/* ===== 底部操作按钮样式 ===== */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 2rpx solid #f0f0f0;
  z-index: 100;
}

.contact-service-btn {
  width: 100%;
  height: 88rpx;
  background-color: #1890ff;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.contact-service-btn:active {
  background-color: #096dd9;
} 
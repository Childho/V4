/* 评论详情页样式 */

/* 页面容器 */
.comment-detail-container {
  min-height: 100vh;
  background: #f8f9fa;
}

/* 页面头部 */
.header-section {
  background: #fff;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.product-summary {
  display: flex;
  align-items: center;
}

.product-thumb {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  /* 超出部分省略 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.comment-count {
  font-size: 24rpx;
  color: #999;
}

/* 筛选器区域 */
.filter-section {
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-scroll {
  white-space: nowrap;
  padding: 24rpx 32rpx;
}

.filter-item {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-right: 24rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  /* 添加点击效果 */
  transition: all 0.3s ease;
}

.filter-item.active {
  background: #ff4757;
  color: #fff;
}

/* 评论列表 */
.comment-list {
  padding-top: 20rpx;
}

.comment-item {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 32rpx;
  border-radius: 12rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  /* 添加轻微阴影 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 用户信息区域 */
.user-section {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
}

.username {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.rating-stars {
  display: flex;
  align-items: center;
}

.star-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

.comment-date {
  font-size: 24rpx;
  color: #999;
}

/* 评论内容区域 */
.comment-content {
  margin-bottom: 24rpx;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  display: block;
  margin-bottom: 24rpx;
}

/* 评论图片 */
.comment-images {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.comment-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  /* 添加点击效果 */
  transition: transform 0.2s ease;
}

.comment-img:active {
  transform: scale(0.95);
}

/* 规格信息 */
.comment-specs {
  padding: 12rpx 16rpx;
  background: #f8f9fa;
  border-radius: 6rpx;
  margin-bottom: 16rpx;
}

.specs-text {
  font-size: 24rpx;
  color: #666;
}

/* 店家回复区域 */
.reply-section {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border-left: 4rpx solid #ff4757;
}

.reply-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.store-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.reply-label {
  font-size: 24rpx;
  color: #ff4757;
  font-weight: 500;
}

.reply-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

/* 互动操作区域 */
.interaction-section {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.like-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
  /* 添加点击效果 */
  transition: all 0.3s ease;
}

.like-btn.liked {
  background: #ffe7e7;
}

.like-btn:active {
  transform: scale(0.95);
}

.like-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.like-text {
  font-size: 24rpx;
  color: #666;
}

.like-btn.liked .like-text {
  color: #ff4757;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 32rpx;
}

.load-text {
  font-size: 26rpx;
  color: #999;
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
} 
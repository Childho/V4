/* 限时秒杀页面主容器样式 */
.seckill-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  /* iOS全面屏适配 */
  padding-top: env(safe-area-inset-top);
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
}

/* === 自定义导航栏样式 === */
.custom-nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 0 30rpx;
  position: relative;
  z-index: 200;
  box-sizing: border-box;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
}

.nav-placeholder {
  width: 60rpx;
  height: 60rpx;
}

/* === 搜索栏样式 === */
.search-section {
  background: #ffffff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  z-index: 100;
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 24rpx;
  padding: 0 24rpx;
  height: 72rpx;
  box-sizing: border-box;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  background: transparent;
  border: none;
  outline: none;
}

.search-input::placeholder {
  color: #999999;
}

.search-btn {
  width: 120rpx;
  height: 72rpx;
  background: #4169e1;
  color: #ffffff;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.search-btn::after {
  border: none;
}

/* === 品牌筛选样式 === */
.brand-filter-section {
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  z-index: 90;
}

.brand-scroll {
  white-space: nowrap;
  padding: 20rpx 0;
}

.brand-list {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  gap: 20rpx;
}

.brand-item {
  padding: 16rpx 32rpx;
  background: #f8f9fa;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666666;
  white-space: nowrap;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.brand-item.active {
  background: #4169e1;
  color: #ffffff;
  border-color: #4169e1;
}

.brand-expand {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f0f4ff;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #4169e1;
  white-space: nowrap;
  gap: 8rpx;
  border: 2rpx solid #4169e1;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.expand-text {
  font-weight: 500;
}

.expand-icon {
  width: 24rpx;
  height: 24rpx;
  transition: transform 0.3s ease;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

/* === 商品列表样式 === */
.products-section {
  flex: 1;
  position: relative;
  overflow: hidden;
}

.products-scroll {
  width: 100%;
  height: 100%;
}

.products-list {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 商品项样式 */
.product-item {
  display: flex;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.product-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.12);
}

/* 商品图片区域 */
.product-image-wrapper {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.seckill-label {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  background: linear-gradient(45deg, #ff4757, #ff6b81);
  color: #ffffff;
  font-size: 20rpx;
  font-weight: bold;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.3);
}

/* 商品信息区域 */
.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 20rpx;
}

.product-header {
  margin-bottom: 12rpx;
}

.product-brand {
  font-size: 24rpx;
  color: #4169e1;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.product-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 价格区域 */
.price-section {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.current-price {
  font-size: 36rpx;
  color: #ff4757;
  font-weight: bold;
}

.original-price {
  font-size: 24rpx;
  color: #999999;
  text-decoration: line-through;
}

/* 标签区域 */
.tags-section {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.tag {
  font-size: 20rpx;
  color: #52c41a;
  background: #f6ffed;
  border: 1rpx solid #b7eb8f;
  border-radius: 8rpx;
  padding: 4rpx 8rpx;
  white-space: nowrap;
}

/* 底部信息区域 */
.bottom-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sales-count {
  font-size: 24rpx;
  color: #666666;
}

.countdown {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.countdown-label {
  font-size: 24rpx;
  color: #666666;
}

.countdown-time {
  font-size: 24rpx;
  color: #ff4757;
  font-weight: bold;
  background: #fff2f0;
  border: 1rpx solid #ffccc7;
  border-radius: 8rpx;
  padding: 4rpx 8rpx;
}

/* 抢购按钮区域 */
.buy-section {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.buy-btn {
  width: 100rpx;
  height: 64rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.buy-btn::after {
  border: none;
}

.buy-btn.active {
  background: linear-gradient(135deg, #ff4757, #ff6b81);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(255, 71, 87, 0.3);
}

.buy-btn.active:active {
  transform: scale(0.95);
}

.buy-btn.disabled {
  background: #cccccc;
  color: #ffffff;
}

/* === 悬浮购物车样式 === */
.floating-cart {
  position: fixed;
  bottom: 120rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #4169e1, #667eea);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(65, 105, 225, 0.3);
  z-index: 999;
  transition: all 0.3s ease;
}

.floating-cart:active {
  transform: scale(0.95);
}

.cart-icon {
  width: 44rpx;
  height: 44rpx;
}

.cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ff4757;
  color: #ffffff;
  font-size: 20rpx;
  font-weight: bold;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.badge-text {
  line-height: 1;
}

/* === 空状态样式 === */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.4;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* === 底部占位 === */
.bottom-placeholder {
  height: 120rpx;
  width: 100%;
}

/* === 加载遮罩样式 === */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #4169e1;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #666666;
}

/* === 响应式适配 === */
@media screen and (max-width: 320px) {
  .product-item {
    padding: 16rpx;
  }
  
  .product-image-wrapper {
    width: 160rpx;
    height: 160rpx;
  }
  
  .current-price {
    font-size: 32rpx;
  }
  
  .buy-btn {
    width: 80rpx;
    height: 56rpx;
    font-size: 24rpx;
  }
} 
/**index.wxss**/
page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  padding-top: 0;
}

.index-container {
  background-color: #f8f9fa;
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
  padding-top: calc(120rpx + env(safe-area-inset-top));
}

/* ===== 简化的顶部header样式 - 白色背景 ===== */
.header {
  width: 100%;
  background-color: #ffffff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}

/* ===== 简化的搜索容器样式 ===== */
.search-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx 20rpx;
  background: transparent;
}

/* ===== 简洁的搜索栏设计 - 白色主题 ===== */
.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 20rpx;
  height: 68rpx;
  margin-right: 16rpx;
  border: 1rpx solid #e9ecef;
}

.search-icon {
  font-size: 26rpx;
  margin-right: 10rpx;
  color: #666;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 100%;
  border: none;
  background: transparent;
}

.search-placeholder {
  color: #999;
}

/* ===== 简化的右侧功能区域 ===== */
.header-actions {
  display: flex;
  align-items: center;
}

/* ===== 会员徽章简化样式 ===== */
.member-badge {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #007aff, #5856d6);
  color: white;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 36rpx;
  white-space: nowrap;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.2);
}

.member-icon {
  font-size: 18rpx;
  margin-right: 4rpx;
}

/* ===== 轮播图样式调整 - 增加顶部间距避免被遮挡 ===== */
.banner-container {
  padding: 24rpx 24rpx;
  margin-top: 20rpx;
  margin-bottom: 24rpx;
}

.banner-swiper {
  width: 100%;
  height: 320rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* ===== Banner遮罩层和文字 ===== */
.banner-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
  padding: 40rpx 32rpx 24rpx;
  color: white;
}

.banner-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.banner-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* ===== 功能导航样式保持不变 ===== */
.nav-container {
  margin: 0 24rpx 32rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.nav-grid {
  display: flex;
  justify-content: space-between;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

/* ===== 导航图标样式调整 - 优化色彩饱和度 ===== */
.nav-icon {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  border: 2rpx solid #dee2e6;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
}

.nav-emoji {
  font-size: 36rpx;
  line-height: 1;
}

/* SVG图标样式 */
.nav-icon-image {
  width: 48rpx;
  height: 48rpx;
}

.nav-item text {
  font-size: 24rpx;
  color: #333333;
  text-align: center;
  font-weight: 500;
}

/* ===== 内容区块公共样式优化 ===== */
.section-container {
  margin: 20rpx 24rpx;
}

/* ===== 标题区域样式优化 ===== */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 10rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.section-emoji {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.more-btn {
  font-size: 28rpx;
  color: #007aff;
  font-weight: 500;
}

/* ===== 活动列表优化样式 ===== */
.activity-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-card {
  display: flex;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  padding: 20rpx;
  transition: transform 0.2s ease;
}

.activity-card:active {
  transform: scale(0.98);
}

.activity-image-container {
  position: relative;
  margin-right: 20rpx;
}

.activity-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.activity-type-tag {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  background: linear-gradient(135deg, #ff6b6b, #ffa500);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  font-weight: 500;
}

.activity-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.activity-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-top: 16rpx;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.activity-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.5;
}

.activity-footer {
  margin-top: auto;
}

.activity-time {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.time-item, .location-item {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.time-icon, .location-icon {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.time-text, .location-text {
  font-size: 24rpx;
}

.location-item {
  margin-left: 40rpx;
}

/* ===== 精选装备模块 - 与商场页面商品卡片样式一致 ===== */

/* 两列商品卡片布局 */
.product-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.product-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
}

.product-card:active {
  transform: scale(0.98);
}

.card-image-wrapper {
  position: relative;
  margin-bottom: 16rpx;
}

.card-image {
  width: 100%;
  height: 260rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
}

.product-tag {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  background-color: #ff6b35;
  color: #ffffff;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.product-name {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.product-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 28rpx;
  color: #ff4444;
  font-weight: 600;
}

.product-sales {
  font-size: 22rpx;
  color: #999999;
}

/* ===== 移除旧样式，保持代码整洁 ===== */
.user-info, .header-right-container, .notification-btn, .notification-icon, .notification-dot {
  display: none;
} 
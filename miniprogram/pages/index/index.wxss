/**index.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  padding-top: 0;
}

.index-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
  padding-top: calc(120rpx + env(safe-area-inset-top));
}

/* 顶部header样式 */
.header {
  width: 100%;
  background-color: #ffffff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

/* 顶部状态栏占位元素 */
.status-bar-placeholder {
  width: 100%;
  background-color: #ffffff;
}

.content-area {
  padding: 0 0 30rpx;
}

/* 搜索栏和会员等级样式 */
.search-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 30rpx 24rpx;
  padding-right: 120rpx;
  background-color: #ffffff;
  position: relative;
  left: 0;
  right: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #F2F5F8;
  border-radius: 36rpx;
  padding: 0 24rpx;
  height: 72rpx;
  margin-top: 0;
  max-width: 320rpx;
}

.search-text {
  flex: 1;
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 右侧容器：包含铃铛和会员等级 */
.header-right-container {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 150rpx;
  margin-left: 15rpx;
  position: absolute;
  right: 200rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 保持原有的user-info样式，用于向后兼容 */
.user-info {
  display: flex;
  align-items: center;
  margin-left: 15rpx;
}

.notification-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.notification-icon image {
  width: 45rpx;
  height: 45rpx;
}

.member-badge {
  background-color: #67c23a;
  color: white;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
  white-space: nowrap;
}

/* 轮播图样式 */
.banner-container {
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
  margin-bottom: 32rpx;
}

.banner-swiper {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 功能导航样式 */
.nav-container {
  margin: 0 30rpx 32rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.nav-grid {
  display: flex;
  justify-content: space-between;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-icon {
  width: 96rpx;
  height: 96rpx;
  background-color: #EAF3FF;
  border-radius: 48rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  box-sizing: border-box;
}

.nav-item text {
  font-size: 24rpx;
  color: #333333;
  text-align: center;
}

/* 内容区块公共样式 */
.section-container {
  margin: 20rpx 30rpx;
}

/* 标题区域样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.more-btn {
  font-size: 28rpx;
  color: #4A90E2;
}

/* 活动列表新样式 */
.activity-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-card {
  display: flex;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
}

.activity-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  object-fit: cover;
}

.activity-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.activity-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-top: 16rpx;
  margin-bottom: 8rpx;
}

.activity-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.5;
}

.activity-footer {
  margin-top: auto;
}

.activity-time {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.time-item, .location-item {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.icon-calendar, .icon-location {
  margin-right: 8rpx;
  font-size: 28rpx;
  color: #999999;
}

.time-text, .location-text {
  font-size: 24rpx;
}

.location-item {
  margin-left: 40rpx;
}

/* 商品网格样式 */
.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-item {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 100%;
  height: 240rpx;
  object-fit: cover;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-price {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: bold;
} 
<view class="login-container">
  <nav-bar title="登录" />
  
  <view class="content">
    <view class="logo">
      <image src="/assets/images/logo.png" mode="aspectFit" />
    </view>
    
    <view class="login-box">
      <button class="login-btn" type="primary" bindtap="handleLogin">
        微信一键登录
      </button>
      
      <view class="tips">
        登录即表示同意
        <text class="link" bindtap="handleViewPrivacy">《隐私政策》</text>
        和
        <text class="link" bindtap="handleViewTerms">《用户协议》</text>
      </view>
    </view>
  </view>
</view> 
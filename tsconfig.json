{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "lib": ["ES2017"],
    "typeRoots": [
      "./typings",
      "./node_modules/@types",
      "./node_modules/miniprogram-api-typings"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["miniprogram/*"]
    }
  },
  "include": [
    "miniprogram/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
